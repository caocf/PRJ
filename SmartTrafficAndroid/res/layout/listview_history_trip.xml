<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/trip_history_clock" 
        android:contentDescription="@string/image_content_discribe"/>

    <TextView
        android:id="@+id/start_point_list_item_text"
    	android:layout_marginLeft="15dp"
    	android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textSize="16sp"
        android:textColor="#5e97ee"/>
    
	<ImageView
	    android:id="@+id/between_list_item_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:src="@drawable/historical_records_icon_arrow_left"
	    android:contentDescription="@string/image_content_discribe" />
	
    <TextView
        android:id="@+id/end_point_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
    	android:layout_marginRight="15dp"
        android:gravity="center_vertical|left"
        android:textSize="16sp"
        android:textColor="#5e97ee"/>

</LinearLayout>

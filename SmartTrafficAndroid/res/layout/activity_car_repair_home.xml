<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/driving_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout> 

	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/car_repair_point_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/driving_school_view"
            android:gravity="center"
            android:onClick="itemOnclick"
            android:src="@drawable/selector_repairl_messager" />

        <ImageView
            android:id="@+id/car_repair_favor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/driving_student_view"
            android:gravity="center"
            android:onClick="itemOnclick"
            android:src="@drawable/selector_repairl_favor" />

        <ImageView
            android:id="@+id/car_repair_call_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/driving_favor_view"
            android:gravity="center"
            android:onClick="itemOnclick"
            android:src="@drawable/selector_repairl_call" />

        <ImageView
            android:id="@+id/car_repair_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/driving_more_view"
            android:gravity="center"
            android:onClick="itemOnclick"
            android:src="@drawable/selector_repairl_more" />

    </LinearLayout>

</LinearLayout>

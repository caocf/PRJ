<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/air_right_drawerlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"   
     >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background="@color/back_groud">
	
	    <FrameLayout
	        android:id="@+id/bus_ticket_head"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	    </FrameLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/ticket_now_date"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_gravity="center_vertical"
	            android:textSize="18sp"
	            android:background="@drawable/bus_date_background"
	            />
	
	    </LinearLayout>
	
	    <ListView
	        android:id="@+id/bus_ticket_list"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp" >
	    </ListView>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/bus_tickets_sort"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/image_content_discribe"
	            android:onClick="control"
	            android:src="@drawable/selector_bus_sort" />
	
	        <ImageView
	            android:id="@+id/bus_tickets_select"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/image_content_discribe"
	            android:onClick="control"
	            android:src="@drawable/selector_bus_select" />
	
	    </LinearLayout>
	  
	</LinearLayout>

	<ScrollView 
        android:id="@+id/right_drawer"
        android:layout_width="fill_parent"
       	android:layout_height="fill_parent"
       	android:layout_gravity="right"
        android:background="#303030"
       	android:scrollbars="vertical"       	
       	>
	    <LinearLayout        
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:orientation="vertical" 
	        >
	    
		    <TextView
		        android:id="@+id/ticket_select_start_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="选择发车时段"
	            android:textColor="@color/back_groud_white" />
		    <ListView 
		        android:id="@+id/ticket_select_start_listview"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content">
		        
		    </ListView>
		    <TextView
		        android:id="@+id/ticket_select_end_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="选择到站时段"
	            android:textColor="@color/back_groud_white" />
		    <ListView 
		        android:id="@+id/ticket_select_end_listview"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content">
		        
		    </ListView>
		    
		    <LinearLayout        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		    
			    <Button
			        android:id="@+id/ticket_search_reset"
			        android:layout_width="0dp"
			        android:layout_weight="1"
		            android:layout_height="wrap_content"	
		            android:background="@drawable/selector_bus_filter_reset"
		            android:onClick="search"           
		            />
			    
			    <Button
			        android:id="@+id/ticket_search_submit"
			        android:layout_width="0dp"
			        android:layout_weight="3"
		            android:layout_height="wrap_content"
		            android:onClick="search"		            
		            android:background="@drawable/selector_bus_filter_enter"/>
	    	</LinearLayout>	
		</LinearLayout>
	</ScrollView>

</android.support.v4.widget.DrawerLayout>


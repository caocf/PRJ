<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/back_groud">

    <FrameLayout
        android:id="@+id/smart_bus_more_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        >

        <TextView
            android:id="@+id/smart_bus_more_suggestion"
             android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:textSize="17sp"
	        android:textColor="#333333"
	        android:gravity="center_vertical"
	        android:background="@drawable/selector_border_shape"
	        android:paddingLeft="15dp"
	        android:drawableRight="@drawable/arrow_right"
	        android:paddingRight="10dp"
	        android:clickable="true" 
	        android:onClick="click"
            android:text="意见建议" />

        <TextView
            android:id="@+id/smart_bus_more_complain"
             android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:textSize="17sp"
	        android:textColor="#333333"
	        android:gravity="center_vertical"
	        android:background="@drawable/selector_border_shape"
	        android:paddingLeft="15dp"
	        android:drawableRight="@drawable/arrow_right"
	        android:paddingRight="10dp"
	        android:clickable="true" 
	        android:onClick="click"
            android:text="我要投诉" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/smart_bus_more_info"
             android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:textSize="17sp"
	        android:textColor="#333333"
	        android:gravity="center_vertical"
	        android:background="@drawable/selector_border_shape"
	        android:paddingLeft="15dp"
	        android:drawableRight="@drawable/arrow_right"
	        android:paddingRight="10dp"
	        android:clickable="true" 
	        android:onClick="click"
            android:text="公交概况" />
        <TextView
            android:id="@+id/smart_bus_more_about"
             android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:textSize="17sp"
	        android:textColor="#333333"
	        android:gravity="center_vertical"
	        android:background="@drawable/selector_border_shape"
	        android:paddingLeft="15dp"
	        android:drawableRight="@drawable/arrow_right"
	        android:paddingRight="10dp"
	        android:clickable="true" 
	        android:onClick="click"
            android:text="关于智慧公交" />

    </LinearLayout>

</LinearLayout>

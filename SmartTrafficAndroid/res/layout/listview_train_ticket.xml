<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/train_search_id"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="G102" />
	
	        <TextView
	            android:id="@+id/train_search_kind"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="高铁" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	       <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		       <ImageView
		            android:id="@+id/imageView1"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:src="@drawable/icon_start" />
	            <TextView
	            android:id="@+id/train_search_startcity"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:text="上海" />
        	</LinearLayout>
	        <TextView
	            android:id="@+id/train_search_starttime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="7:00" />
		</LinearLayout>
		
		<LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/train_tickets_cost_time"
	            android:layout_width="match_parent"
	            android:gravity="center_horizontal"
	            android:layout_height="wrap_content"
	            android:text="" />
	
	        <ImageView
	            android:id="@+id/imageView3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:src="@drawable/air_arow" />
		</LinearLayout>
		
		<LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	        <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <ImageView
	            android:id="@+id/bike_riding_detail_change"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:src="@drawable/icon_end" />
		        <TextView
		            android:id="@+id/train_search_endcity"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:text="杭州" />
	        </LinearLayout>
	
	        <TextView
	            android:id="@+id/train_search_endtime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="8:00" />   
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_ticket_price_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
         >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一等座" />

        <TextView
            android:id="@+id/train_search_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:text="" />
        
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二等座" />

        <TextView
            android:id="@+id/train_search_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="" />
        
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商务座" />

        <TextView
            android:id="@+id/train_search_business"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="" />
        
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他" />

        <TextView
            android:id="@+id/train_search_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="" />

    </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/back_groud" >

    <FrameLayout
        android:id="@+id/trip_list_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <TextView
        android:id="@+id/trip_list_main_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/back_groud_white"
        android:text="" />

    <ListView
        android:id="@+id/trip_list_detail_list_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        android:background="@color/back_groud_white">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/trip_list_favor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_trip_info_favor"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="onclick" />

        <ImageView
            android:id="@+id/trip_list_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_trip_info_circle"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="onclick"  />

        <ImageView
            android:id="@+id/trip_list_suggest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_trip_info_suggest"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="onclick"  />

        <ImageView
            android:id="@+id/trip_list_debug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_trip_info_debug"
            android:contentDescription="@string/image_content_discribe" 
            android:onClick="onclick" />

    </LinearLayout>

</LinearLayout>
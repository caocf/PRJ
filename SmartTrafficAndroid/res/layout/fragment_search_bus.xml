<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_groud" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/textview_border_shape" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
        	android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@drawable/textview_border_shape" >

            <TextView
                android:id="@+id/search_bus_no_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/bus_number"
                android:textColor="@color/name_color" />

            <EditText
                android:id="@+id/search_bus_no"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/bus_search_hint"
                android:textColorHint="#a3a3a3"
                android:layout_gravity="center_vertical"
                android:textSize="20sp" 
                android:background="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
        	android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@drawable/textview_border_shape" >

            <TextView
                android:id="@+id/search_bus_no_time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bus_search_time"
                android:layout_gravity="center_vertical" 
                android:textColor="@color/name_color" />

            <TextView
                android:id="@+id/search_bus_no_time"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:clickable="true"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_under_backgroud"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="10dp"
        	android:paddingRight="10dp"
            android:orientation="horizontal" >



            <TextView
                android:id="@+id/bus_no_real"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/bus_no_item_1"
                android:drawableLeft="@drawable/item_check"
                android:drawablePadding="5dp"/>


            <TextView
                android:id="@+id/bus_no_station"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/bus_no_item_2" 
                android:drawableLeft="@drawable/item_uncheck"
                android:drawablePadding="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/search_bus_no_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/selector_button_search"
         />

    <TextView
            android:id="@+id/search_bus_history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/bus_hostory_name"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/bus_search_history_short_line"
            android:drawableRight="@drawable/bus_search_history_short_line"
            android:drawablePadding="10dp"
            android:textSize="16sp" 
            android:textColor="#5e97ee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
        
        <ListView
	        android:id="@+id/search_bus_no_history"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center_horizontal"
	        android:divider="@color/back_groud_white" >
    		
    	</ListView>
    </LinearLayout>

    

</LinearLayout>

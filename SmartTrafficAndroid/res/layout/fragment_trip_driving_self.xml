<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/back_groud">

    <FrameLayout
        android:id="@+id/trip_driving_self_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

   <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal"
	    android:background="#ffffff" >

	    <TextView
	        android:id="@+id/trip_driving_self_date"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:paddingLeft="10dp"
	        android:textColor="@color/trip_plan_blue"
	        android:drawableRight="@drawable/arrow_right"
	        android:background="@drawable/selector_text_default_under"
	        android:textSize="16sp"/>

	    <View    
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_width="1px"   
	        android:background="#cccccc"   
	        android:layout_height="fill_parent">  
		</View>  

	
	    <TextView
	        android:id="@+id/trip_driving_self_method"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	         android:paddingRight="10dp"
	        android:layout_height="match_parent"
	        android:clickable="true"
	        android:gravity="center_vertical"
	        android:textColor="@color/trip_plan_blue"
	        android:textSize="16sp"
	        android:drawableRight="@drawable/arrow_right"
	        android:background="@drawable/selector_text_default_under"
	        android:text="@string/string_trip_default_stategy"/>
	    

	</LinearLayout>
    <View    
	        android:layout_height="1px"   
	        android:background="#cccccc"   
	        android:layout_width="match_parent">  
	</View>  

    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:paddingBottom="10dp" >
	    
        <ImageView
            android:id="@+id/bus_search_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_trip_exchange" 
            android:contentDescription="@string/image_content_discribe"/>
        
	    <Button
	        android:id="@+id/trip_driving_self_search"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:layout_marginTop="120dp"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/selector_button_search"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	        android:textColor="#ffffff" />
	    
	   <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/layout_trip_driving_self"
		    android:layout_below="@+id/trip_driving_self_search"
		    android:layout_marginTop="20dp"
		    android:orientation="vertical" >
	
		    <TextView
		        android:id="@+id/trip_history_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:text="@string/string_trip_history_label"
		        android:textColor="#5c5c5c" 
		        android:textSize="14sp"/>
	
		    <ListView
		        android:id="@+id/trip_driving_self_history"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:background="#ffffff" >
		    </ListView>

	    
		</LinearLayout>
	    
	    <com.example.smarttraffic.view.InputListView
	        android:id="@+id/trip_driving_self_end"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="40dp"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="60dp" >
   	 	</com.example.smarttraffic.view.InputListView>
	    
	    <com.example.smarttraffic.view.InputListView
	        android:id="@+id/trip_driving_self_start"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="40dp"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="10dp"
	        >
        </com.example.smarttraffic.view.InputListView>
	    
	</RelativeLayout>
</LinearLayout>
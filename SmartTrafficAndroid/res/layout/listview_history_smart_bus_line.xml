<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/trip_history_clock" 
        android:contentDescription="@string/image_content_discribe"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	    <TextView
	        android:id="@+id/smart_bus_history_line_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="16sp"
	        android:layout_gravity="center_vertical"
	        android:textColor="#333333"
	        android:text=""/>
	
	    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		    <TextView
		        android:id="@+id/smart_bus_history_line_start"
		    	android:layout_marginLeft="5dp"
		    	android:layout_marginRight="5dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:gravity="center_vertical|left"
		        android:textSize="14sp"
		        android:textColor="#a3a3a3"
		        android:text=""/>
		    
			<ImageView
			    android:id="@+id/between_list_item_image"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:src="@drawable/historical_records_icon_arrow_left"
			    android:contentDescription="@string/image_content_discribe" />
			
		    <TextView
		        android:id="@+id/smart_bus_history_line_end"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		    	android:layout_marginRight="5dp"
		    	android:layout_gravity="center_vertical"
		        android:gravity="center_vertical|left"
		        android:textSize="14sp"
		        android:textColor="#a3a3a3"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:text=""/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>

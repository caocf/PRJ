<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/trip_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/trip_driving_self"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="changeFragment"
            android:src="@drawable/selector_trip_self" />

        <ImageView
            android:id="@+id/trip_driving_common"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="changeFragment"
            android:src="@drawable/selector_trip_bus" />

        <ImageView
            android:id="@+id/trip_favor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="changeFragment"
            android:src="@drawable/selector_trip_favor" />

        <ImageView
            android:id="@+id/trip_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image_content_discribe"
            android:onClick="changeFragment"
            android:src="@drawable/selector_trip_more" />

    </LinearLayout>

</LinearLayout>
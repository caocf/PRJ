<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/driver_guide_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background_normal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/driver_guide_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="实时路况"
                android:onClick="onclick"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/driver_guide_1_underline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/image_content_discribe"
                android:src="@drawable/line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/driver_guide_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onclick"
                android:text="指数曲线"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/driver_guide_2_underline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/image_content_discribe"
                android:src="@drawable/line" />
        </LinearLayout>

        
         <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/driver_guide_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="区域指数"
                android:onClick="onclick"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/driver_guide_3_underline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/image_content_discribe"
                android:src="@drawable/line" />
        </LinearLayout>
    </LinearLayout>

    
    <FrameLayout
        android:id="@+id/driver_guide_content"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1">
    </FrameLayout>
    

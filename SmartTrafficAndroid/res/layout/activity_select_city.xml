<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_groud"
     >

    <FrameLayout
        android:id="@+id/select_city_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginLeft="10dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:orientation="horizontal"
	    android:background="@drawable/textview_border_shape">

        <ImageView
            android:id="@+id/bus_search_city_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_search"
            android:contentDescription="@string/image_content_discribe" />
    
	    <EditText
	        android:id="@+id/bus_search_city_edit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:hint="@string/bus_search_city_hint"
	        android:background="@color/back_groud_white"
	         />
	</LinearLayout>
    <TextView
        android:id="@+id/bus_search_city_default_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/bus_search_city_default_name"
        android:textColor="@color/font_color" />

    <TextView
        android:id="@+id/bus_search_city_default"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:text="@string/bus_search_city_default"
        android:background="@color/back_groud_white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/bus_search_city_hot_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/bus_search_city_hot_name" 
        android:textColor="@color/font_color"/>

    <ListView
        android:id="@+id/bus_hot_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/back_groud_white" >
    </ListView>
    
</LinearLayout>

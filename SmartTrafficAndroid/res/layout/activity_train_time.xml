<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/back_groud" >

    <FrameLayout
        android:id="@+id/train_no_time_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:background="#eeeeee" >

        <TextView
            android:id="@+id/train_no_first_left"
            android:layout_width="0dp"
    	    android:layout_weight="1"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
            android:text="站点" />


        <TextView
            android:id="@+id/air_no_real_end_city"
            android:layout_width="0dp"
       	    android:layout_weight="1"
     	    android:layout_height="wrap_content"
       	    android:layout_gravity="center"
            android:text="到达时间" />

        <TextView
            android:id="@+id/air_no_real_start_airport"
            android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
            android:text="出发时间" />

        <TextView
            android:id="@+id/air_no_real_end_airport"
            android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
            android:text="停留时间" />

    </LinearLayout>

    <ListView
        android:id="@+id/train_no_time_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/back_groud_white">
    </ListView>

</LinearLayout>
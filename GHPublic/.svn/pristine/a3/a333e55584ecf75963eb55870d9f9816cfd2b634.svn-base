<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:orientation="horizontal" >


        <TextView
            android:id="@+id/loginBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/image_button_back"
            android:text="用户登录"
            android:textColor="#1766b1"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/linearLayout1"
        android:src="@drawable/title_backgrundmenu" />
	<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:layout_below="@+id/imageView2"
        android:text="TextView" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:background="#ffff"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="用户名"
            android:textColor="#666666"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ffff"
            android:hint="请输入用户名"
            
            android:textSize="16sp" >

        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/forcus"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:layout_below="@+id/linearLayout2"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forcus"
        android:background="#ffff"
        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bb"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="密码"
            android:textColor="#666666"
            android:layout_weight="0.7"
            
            android:textSize="16sp" /> />

        <EditText
            android:id="@+id/userPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ffff"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_weight="4.0"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pwd_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.1"
            android:src="@drawable/icon_eye_close" />

    </LinearLayout>
	<TextView
        android:id="@+id/bbb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:layout_below="@+id/linearLayout3"
        android:text="TextView" />


	<Button
	    android:id="@+id/login"
	    android:layout_width="match_parent"
	    android:layout_height="56dp"
	    android:layout_below="@+id/l2"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:background="@drawable/ic_selector_btn"
	    android:layout_marginTop="20dp"
	    android:textSize="18sp"
	    android:textColor="#ffff"
	    android:text="登录" />

	<TextView
	    android:id="@+id/forget_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="16dp"
	    android:textSize="14dp"
	    android:textColor="#1766b1"
	    android:layout_alignLeft="@+id/login"
	    android:layout_below="@+id/login"
	    android:text="忘记密码" />

	<TextView
	    android:id="@+id/uer_regist"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/forget_password"
	    android:layout_alignRight="@+id/login"
	    android:text="用户注册"
	    android:textColor="#1766b1"
	    android:textSize="14dp" />

	<LinearLayout
	    android:id="@+id/l2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    
	    android:layout_below="@+id/bbb" >

	    <CheckBox
	        android:id="@+id/repwd"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_marginLeft="18dp"
	        android:layout_marginTop="18dp"
	        style="@style/custom_checkbox"
	         />

	    <TextView
	        android:id="@+id/textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="11dp"
	        android:layout_marginTop="15dp"
	        android:text="记住密码"
	        android:textColor="#666666"
	        android:textSize="12sp" />

	</LinearLayout>
	
</RelativeLayout>
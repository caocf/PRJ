<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#ffff" >

        <TextView
            android:id="@+id/newslist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/image_button_back"
            android:drawablePadding="16dp"
            android:text="港航新闻"
            android:textColor="#1766b1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/newsfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center"
            android:text="嘉兴"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/title_backgrundmenu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F4F4F4"
        android:orientation="horizontal" >

        <com.hztuen.gh.widge.HomeSecondHeaderView
            android:id="@+id/importantnews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            isClick="true"
            title="港航要闻"
            android:gravity="center" >
        </com.hztuen.gh.widge.HomeSecondHeaderView>

        <com.hztuen.gh.widge.HomeSecondHeaderView
            android:id="@+id/vocationstate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            isClick="false"
            title="行业动态"
            android:gravity="center" >
        </com.hztuen.gh.widge.HomeSecondHeaderView>

        <com.hztuen.gh.widge.HomeSecondHeaderView
            android:id="@+id/mediaforcus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            isClick="false"
            title="媒体聚焦"
            android:gravity="center" >
        </com.hztuen.gh.widge.HomeSecondHeaderView>
    </LinearLayout>

    <TextView
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:text="TextView" />

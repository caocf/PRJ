<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_shape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/checkHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="正在更新中"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:text="TextView" />

    <com.kince.saundprogressbar.widget.SaundProgressBar
        android:id="@+id/regularprogressbar"
        style="@style/Widget.ProgressBar.RegularProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingBottom="40dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:text="TextView" />
    
    
    <TextView
        android:id="@+id/check_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="取消更新"
        android:textColor="#666666"
        android:textSize="16sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d7d7d7"
            android:text="TextView" />

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line"
            android:background="#ffff" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:text="报告单号："
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text1_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/text1"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:text="12116523"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:text="待审批"
                android:textColor="#f89513"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forcus1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relative1"
            android:background="#d7d7d7"
            android:text="TextView" />

        <LinearLayout
            android:id="@+id/liner_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forcus1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff" >

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="浙萧山货23668"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text2_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/text2"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:text="煤炭"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goods_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/text2_context"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:text="2000"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/goods_weight"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:text="吨"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff" >

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="嘉兴港"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/point"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/text3"
                    android:background="@drawable/ic_word_arrow" />

                <TextView
                    android:id="@+id/text3_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/point"
                    android:gravity="center_vertical"
                    android:text="湖州港"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="12dp"
                android:background="#ffff" >

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="2016-5-20"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/forcus2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative1"
                android:background="#d7d7d7"
                android:text="TextView" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_two_choose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relative_detail" >

        <LinearLayout
            android:id="@+id/liner_two_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_revise"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="修改"
                android:textColor="#1766b1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#d7d7d7"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="撤销"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/liner_two_button"
            android:background="#d7d7d7"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relative_two_choose"
        android:background="#d7d7d7"
        android:text="TextView" />

</RelativeLayout>
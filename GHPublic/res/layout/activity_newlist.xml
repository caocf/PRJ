<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/title_backgrundmenu" >

        <TextView
            android:id="@+id/newslist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text=""
            android:drawableLeft="@drawable/ic_selector"
            android:drawablePadding="16dp"
            android:textColor="#1766b1"
            android:textSize="18sp" 
            android:onClick="onBack"/>

        <Button
            android:id="@+id/newsfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:drawableRight="@drawable/icon_right"
            android:gravity="center"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F4F4F4" >

        <com.hztuen.gh.widge.HomeSecondHeaderView
            android:id="@+id/importantnews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            isClick="true"
            title=""
            android:gravity="center" />

        <com.hztuen.gh.widge.HomeSecondHeaderView
            android:id="@+id/vocationstate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            isClick="false"
            title="行业动态"
            android:gravity="center" />

        <com.hztuen.gh.widge.HomeSecondHeaderView
            android:id="@+id/mediaforcus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            isClick="false"
            title="媒体聚焦"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:text="TextView" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/newslistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />  

</LinearLayout>
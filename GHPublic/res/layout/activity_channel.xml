<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center" >
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="16dp"        
        android:background="@drawable/ic_selector"
        android:onClick="onBack"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写报告"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"
        android:layout_marginLeft="16dp" />
        
        
        </LinearLayout>
        
    <!-- 内容-->
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
    android:focusable="true"
    android:divider="@drawable/devider"
  
    android:showDividers="middle|end" 
    android:focusableInTouchMode="true">
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="报告类型"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <TextView 
           android:id="@+id/type"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
              
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="船舶"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <com.hxkg.ereport.ShipSpinner
            android:id="@+id/shipspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" />
  </LinearLayout> 
   <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="进/出港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <com.hxkg.ereport.InOutSpinner
            android:id="@+id/inoutpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" />
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="起运港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <com.hxkg.ereport.PortSpinner
            android:id="@+id/fromspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp"             
            android:background="@drawable/bg_spinner" />
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="目的港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <com.hxkg.ereport.PortSpinner
            android:id="@+id/endpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" />
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="载货种类"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <com.hxkg.ereport.GoodsTypeSpinner
            android:id="@+id/goodspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" />
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="载货数量"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <EditText 
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入数量" 
            android:layout_marginLeft="20dp"
            android:layout_weight="1" 
            android:id="@+id/goodscount"/>        
        <com.hxkg.ereport.UnitSpinner
            android:id="@+id/unitspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="26dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@null" />
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="预计进港时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:hint="请选择时间"
            android:layout_marginLeft="20dp" 
            android:id="@+id/time"
            android:onClick="onTimePick"/>    
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="上一航次加油量"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <EditText
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:hint="请输入数量"
            android:background="@null"
            android:layout_marginLeft="20dp"  
            android:layout_weight="1"
            android:id="@+id/gascount" />    
             <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="升"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="26dp"
             android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp"    /> 
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="上一航次加油时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:hint="请选择时间"
            android:layout_marginLeft="20dp" 
            android:id="@+id/timegas"
            android:onClick="onTimePick"/>    
  </LinearLayout>
  
  
 <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1" 
            android:layout_gravity="center"
            android:text="提交"
            android:padding="16dp"
            android:textColor="#ffffff"
            android:onClick="onSubmit"
            android:background="#1667b1"/>
        
 </LinearLayout> 
  </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center"
        android:onClick="onViewClick">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="16dp"        
        android:background="@drawable/ic_selector"
        android:onClick="onViewClick"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="危货报港详情"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"
        android:layout_marginLeft="16dp" />
        
        
        </LinearLayout>
        
    <!-- 内容-->
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
    android:focusable="true"
    android:divider="@drawable/devider"
  
    android:showDividers="middle|end" 
    android:focusableInTouchMode="true">  
    
                <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="审批编号"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/shipnum"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout> 
              
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="船舶"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/ship"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout> 
   
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="始发港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/from"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="目的港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/to"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="货物名称"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/goodstype"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="载货数量"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
         <TextView 
           android:id="@+id/goodscount"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
         <TextView 
           android:id="@+id/goodsunit"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>

  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="预计进港时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_marginLeft="20dp" 
            android:id="@+id/gastime" />    
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="提交时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_marginLeft="20dp" 
            android:id="@+id/uptime" />    
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
        android:visibility="gone">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="审核人"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_marginLeft="20dp" 
            android:id="@+id/cheker" />    
  </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_marginLeft="20dp" 
            android:id="@+id/status" />    
  </LinearLayout>
        
 </LinearLayout> 
  </ScrollView>
</LinearLayout>
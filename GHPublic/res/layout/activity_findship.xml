<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:id="@+id/findship_view"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/title_backgrundmenu" >

        <RelativeLayout
            android:id="@+id/relative_title_final"
            android:layout_width="wrap_content"
            android:layout_height="48dip" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/image_button_back" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/back"
                android:text="找船"
                android:textColor="#1766b1"
                android:textSize="18sp" />
        </RelativeLayout>
        
         <ImageButton 
            android:id="@+id/image_add"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_add_pic"/>
    </RelativeLayout> 

    <TextView
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:text="TextView" />
    
    <LinearLayout 
        android:id="@+id/liner_case"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f9f9f9"
        android:orientation="horizontal">
         
         <LinearLayout 
          android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:orientation="horizontal" 
        android:gravity="center"
        android:layout_weight="1">
            
            <TextView  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="从"/>
            <TextView 
                android:id="@+id/togglestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="不限"
                android:onClick="onClick"
                android:drawableRight="@drawable/ic_dropdown"/>
            
        </LinearLayout> 
        <LinearLayout 
          android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:orientation="horizontal" 
        android:gravity="center"
        android:layout_weight="1">
            
            <TextView  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="到"/>
            <TextView 
                android:id="@+id/toggleend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="不限"
                 android:onClick="onClick"
                android:drawableRight="@drawable/ic_dropdown"/>
            
        </LinearLayout> 
        <LinearLayout 
          	android:layout_width="wrap_content"
	        android:layout_height="match_parent" 
	        android:orientation="horizontal" 
	        android:gravity="center"
	        android:layout_weight="1">
            
            <TextView  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="货物类型"/>
            <TextView 
                android:id="@+id/toggletype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="不限"
                 android:onClick="onClick"
                android:drawableRight="@drawable/ic_dropdown"/>
            
        </LinearLayout> 
    </LinearLayout>
    
    <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            android:text="TextView" />
    <ListView 
        android:id="@+id/lv_find_ship"
        android:layout_width="match_parent"
        android:divider="#d7d7d7"
        android:dividerHeight="1dp"
        android:layout_height="wrap_content">
        
    </ListView>

</LinearLayout>
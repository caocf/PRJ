<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_selector_list"
    android:orientation="vertical" >
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView 
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内河船舶防止垃圾污染证书"
            android:layout_marginTop="19dp"
            android:textColor="#333333"           
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            />
        
        
    </RelativeLayout>
    
    
    
      <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >
        
        <TextView 
            android:id="@+id/tv_send_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发证日期:"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            
            />
        
         <TextView 
            android:id="@+id/tv_send_date_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:layout_toRightOf="@+id/tv_send_date"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            
            />
          
    </RelativeLayout>
    
       <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       
        >
        
        <TextView 
            android:id="@+id/tv_have_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效日期:"
            android:textColor="#ff2323"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:paddingBottom="20dp"
            />
         <TextView 
            android:id="@+id/tv_have_use_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.03.02"
            android:layout_toRightOf="@+id/tv_have_use"
            android:textColor="#ff2323"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
 
            />
          
    </RelativeLayout>
    
    
    

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center"
        android:onClick="onViewClick">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="16dp"        
        android:background="@drawable/ic_selector"
        android:onClick="onViewClick"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电子报告详情"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"
        android:layout_marginLeft="16dp" />
        
        
        </LinearLayout>
        
    <!-- 内容-->
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
    android:focusable="true"
    android:divider="@drawable/devider"
  
    android:showDividers="middle|end" 
    android:focusableInTouchMode="true">
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="报告类型"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <TextView 
           android:id="@+id/reporttype"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
              
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="船舶"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/ship"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout> 
   <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="进/出港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/inout"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="起运港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/from"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="目的港"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
         <TextView 
           android:id="@+id/to"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="载货种类"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/goodstype"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="载货数量"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
         <TextView 
           android:id="@+id/goodscount"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
         <TextView 
           android:id="@+id/goodsunit"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="预计进港时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            
            android:layout_marginLeft="20dp" 
            android:id="@+id/time" />    
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="上一航次加油量"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
         <TextView 
           android:id="@+id/gascount"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="20dp"
        android:textColor="#333333" 
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="上一航次加油时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/> 
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:hint="请选择时间"
            android:layout_marginLeft="20dp" 
            android:id="@+id/gastime" />    
  </LinearLayout>
  
  <Button 
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_margin="20dp"
      android:text="我要调整航线"
      android:textColor="#fff"
      android:textSize="17sp"
      android:background="@drawable/ic_selector_btn"
      android:onClick="onChange"/>
        
 </LinearLayout>
          
  </ScrollView>
</LinearLayout>
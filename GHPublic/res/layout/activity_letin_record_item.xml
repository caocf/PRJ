<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:divider="#d7d7d7"
    android:showDividers="middle|end">   
    <TextView 
         android:layout_width="match_parent"
            android:layout_height="1dp"  
            android:background="#d7d7d7"   /> 
    <LinearLayout 
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
     
     <LinearLayout 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_weight="1">         
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#ffff">
	         <TextView 
	            android:id="@+id/text2_context"
	            android:layout_marginTop="16dp"
	            android:paddingBottom="12dp"
	            android:textColor="#333333"
	            android:textSize="16sp"
	            android:layout_marginLeft="16dp"	  
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:text="货物类型"/>  
	            <TextView 
	            android:id="@+id/goods_weight"
	            android:layout_marginTop="16dp"
	            android:paddingBottom="12dp"
	            android:textColor="#333333"
	            android:textSize="16sp"	           
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:text="2000"/>  
	            <TextView 
	            android:id="@+id/danwei"
	            android:layout_marginTop="16dp"
	            android:paddingBottom="12dp"
	            android:textColor="#333333"
	            android:textSize="16sp"	  
	            android:layout_marginLeft="5dp"          
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:text="重量单位"/>                
    		</LinearLayout>    
         
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffff">
		        <TextView 
		            android:id="@+id/text3"
		            android:layout_width="wrap_content"
		            android:textColor="#666666"
		            android:textSize="14sp"
		            android:layout_marginLeft="16dp"           
		            android:layout_height="wrap_content"
		            android:text="始发 港"/>
		        <ImageView 
		            android:id="@+id/point"
		            android:layout_toRightOf="@+id/text3"
		            android:background="@drawable/ic_word_arrow"
		            android:layout_marginLeft="5dp"
		            android:layout_centerVertical="true"
		            android:layout_width="10dp"
		            android:layout_height="10dp" />
		         <TextView 
		            android:id="@+id/text3_context"          
		            
		            android:textColor="#666666"
		            android:textSize="14sp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="10dp"
		            android:layout_toRightOf="@+id/point"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:text="目的港"/>                
		    </LinearLayout>
    
    
		     <RelativeLayout 
		        android:layout_marginTop="12dp"
		        android:layout_marginBottom="14dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffff">
		        <TextView 
		            android:id="@+id/text4"
		            android:layout_width="wrap_content"
		            android:textColor="#999999"
		            android:textSize="12sp"
		            android:layout_marginLeft="16dp"           
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="2016-5-20"/>                    
		    </RelativeLayout>
     	</LinearLayout>
     	<TextView 
            android:id="@+id/text_state1"
            android:layout_marginTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#f89513"
            android:textSize="14sp"           
            android:layout_marginRight="16dp"            
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="待审批11"/> 
     </LinearLayout>
     <TextView 
       android:layout_width="match_parent"
            android:layout_height="wrap_content"  
            android:text="取消发布"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#666666"
            android:id="@+id/cancel"
            android:visibility="gone"/> 
        
            
        <LinearLayout 
            android:id="@+id/linea"
          android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"   
            android:divider="#d7d7d7"
            android:showDividers="middle"
            android:visibility="gone">
             <TextView 
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:text="删除" 
             android:textSize="16sp"
             android:textColor="#666666"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center" 
            android:id="@+id/deleTextView"/> 
            <TextView 
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:text="修改" 
             android:textSize="16sp"
             android:textColor="#666666"
             android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center" 
            android:layout_weight="1" 
            android:id="@+id/updaTextView"/> 
        </LinearLayout>
        
        <TextView 
         android:layout_width="match_parent"
            android:layout_height="1dp"  
            android:background="#d7d7d7"   /> 

</LinearLayout>

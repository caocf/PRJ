select  a1.year_id as YEAR, a1.year_name as YEAR_desc, a2.MID as GL_JSDJ, a2.MNAME as GL_JSDJ_desc,sum(JS_ZLC_ZZ) as JS_ZLC_ZZ from MDM_GL_ZLC_LN a0,code_year a1,MCODE_GL_JSDJ a2 where 1=1 and a0.YEAR= a1.year_id and a0.GL_JSDJ= a2.MID group by a1.year_id,a1.year_name,a2.MID,a2.MNAME order by  a1.year_id asc, a2.MID asc
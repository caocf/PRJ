select  a1.MID as XZQH, a1.MNAME as XZQH_desc, a1.PX, a2.MID as GL_XZDJ, a2.MNAME as GL_XZDJ_desc,sum(XZ_ZLC) as XZ_ZLC from MDM_GL_ZLC_LN a0,MCODE_XZQH_DTL a1,MCODE_GL_XZDJ a2 where 1=1 and a0.XZQH= a1.MID and a0.GL_XZDJ= a2.MID and  YEAR = $YEAR group by a1.MID,a1.MNAME, a1.PX,a2.MID,a2.MNAME order by  a1.PX asc, a2.MID asc
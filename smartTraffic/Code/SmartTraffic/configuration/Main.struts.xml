<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<!-- 指定Web应用的默认编码，相当于调用request的setCharacterEncoding方法 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 把Action对象交给Spring创建和管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 系统常量定义，定义上传文件临时存放路径 -->
	<constant name="struts.multipart.saveDir" value="d:\temp" />
	<!-- 设置导入时文件大小 -->
	<constant name="struts.multipart.maxSize" value="1000000000" />
	
	<!-- 当Struts2的配置文件修改后，系统是否自动重新加载配置文件，默认值为false(生产环境下使用)，开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="false" />
	<!-- 开发模式下使用，这样可以打印出更详细的日志信息 -->
	<constant name="struts.devMode" value="false" />
	
	<!-- 定义默认包 -->
	<package name="cement-interceptor" extends="json-default"
		namespace="/">
		<global-results>
			<result name="exception">/error/exceptionPage.jsp</result>
		</global-results>

		<!-- 统一异常处理 -->
		<global-exception-mappings>
			<exception-mapping result="exception" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
	</package>
<package name="methods" namespace="/"
						extends="struts-default">
        <!-- 对应着MethodAction里面的execute方法 -->
        <action name="areaTpi" class="com.SmartTraffic.action.AreaTpiAction">
            <result name="success">/Methods/list.jsp</result>
        </action>
        <action name="hotTpi" class="com.SmartTraffic.action.HotTpiAction">
            <result name="success">/Methods/list.jsp</result>
        </action>
        <action name="conRtic" class="com.SmartTraffic.action.ConRticAction">
            <result name="success">/Methods/list.jsp</result>
        </action>
     </package>

	<!-- struts框架会自动扫描所有名为*.struts.xml的文件 。 请注意该文件的命名规则： *.struts.xml -->


</struts>


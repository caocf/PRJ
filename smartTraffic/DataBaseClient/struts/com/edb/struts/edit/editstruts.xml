<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="edit" extends="cement-interceptor" namespace="/">
		<action name="queryAllTable" class="com.edb.edit.action.EditAction"
			method="queryAllTable">
			<result name="success" type="json" />
			<result name="error" />
		</action>

		<action name="queryColumnByTableName" class="com.edb.edit.action.EditAction"
			method="queryColumnByTableName">
			<result name="success" type="json" />
			<result name="error" />
		</action>

		<action name="queryContetnByTableName" class="com.edb.edit.action.EditAction"
			method="queryContetnByTableName">
			<result name="success" type="json" />
			<result name="error" />
		</action>
		
		<action name="queryOneRow" class="com.edb.edit.action.EditAction"
			method="queryOneRow">
			<result name="success" type="json" />
			<result name="error" />
		</action>
		

		<action name="deleteByTableAndID" class="com.edb.edit.action.EditAction"
			method="deleteByTableAndID">
			<result name="success" type="json" />
			<result name="error" />
		</action>

		<action name="addContent" class="com.edb.edit.action.EditAction"
			method="addContent">
			<result name="success" type="json" />
			<result name="error" />
		</action>

		<action name="updateContent" class="com.edb.edit.action.EditAction"
			method="updateContent">
			<result name="success" type="json" />
			<result name="error" />
		</action>


		<action name="downloadExcel" class="com.edb.edit.action.EditAction"
			method="downloadExcel">
			<result name="success" type="stream">
				<param name="contentType">application/vnd.ms-excel</param>
				<param name="contentDisposition">attachment;filename="${tableName}.xls"</param>
				<param name="inputName">inputExcel</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>

		<action name="uploadExcel" class="com.edb.edit.action.EditAction"
			method="uploadExcel">
			<result name="success" type="redirect" >/page/Pagemodel.jsp?sc=1</result>
			<result name="error" type="redirect">/page/Pagemodel.jsp?sc=0</result>
		</action>
		
		<action name="initDB" class="com.edb.edit.action.EditAction"
			method="initDB">
			<result name="success" type="json" />
			<result name="error" />
		</action>

	</package>
</struts>    

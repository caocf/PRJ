<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="download" extends="cement-interceptor" namespace="/">
		<action name="queryLastVersion" class="com.sts.smartbus.download.action.DownloadAction"
			method="queryLastVersion">
			<result type="json" name="success"><param name="root">version</param></result>
			<result name="error"/>
		</action>
		
		<action name="downLastApp" class="com.sts.smartbus.download.action.DownloadAction"
			method="downLastApp">
			<result name="success" type="redirect">${directURL}</result>
			<result name="error"/>
		</action>
		
		<action name="queryAppCount" class="com.sts.smartbus.download.action.DownloadAction"
			method="queryAppCount">
			<result type="json" name="success"></result>
			<result name="error"/>
		</action>

	</package>
</struts>    

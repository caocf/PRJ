<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  

	<bean id="trafficInfoAction" class="com.sts.trafficinfo.action.TrafficInfoAction" scope="prototype">
		<property name="trafficInfoService" ref="trafficInfoService"></property>
	</bean>
	
	<bean id="trafficInfoService" class="com.sts.trafficinfo.service.TrafficInfoService" scope="prototype">
		<property name="trafficInfoDao" ref="trafficInfoDao"></property>
	</bean>
	
	<bean id="trafficInfoDao" class="com.sts.trafficinfo.dao.TrafficInfoDao" scope="prototype">
	<property name="hibernateTemplate" ref="hibernateTemplate"></property>
	</bean>


</beans>

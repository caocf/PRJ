<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  

	<bean id="taxiAction" class="com.sts.taxi.action.TaxiAction" scope="prototype">
		<property name="taxiService" ref="taxiService"></property>
	</bean>
	
	<bean id="taxiService" class="com.sts.taxi.service.TaxiService" scope="prototype">
		<property name="taxiDao" ref="taxiDao"></property>
	</bean>
	
	<bean id="taxiDao" class="com.sts.taxi.dao.TaxiDao" scope="prototype">
	<property name="hibernateTemplate" ref="hibernateTemplate"></property>
	</bean>


</beans>

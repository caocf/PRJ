<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
	<bean id="userAction" class="com.sts.user.action.UserAction" scope="prototype">
		<property name="userService" ref="userService"></property>		
	</bean>
	
	<bean id="userService" class="com.sts.user.service.UserService" scope="prototype">
		<property name="userDao" ref="userDao"></property>		
	</bean>

	<bean id="userDao" class="com.sts.user.dao.UserDao" scope="prototype">
		<property name="hibernateTemplate" ref="hibernateTemplate"></property>
	</bean>
</beans>

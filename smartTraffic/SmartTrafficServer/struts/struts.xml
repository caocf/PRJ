<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 把Action对象交给Spring创建和管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 系统常量定义，定义上传文件临时存放路径 -->
	<constant name="struts.multipart.saveDir" value="d:\temp" />
	<!-- 设置导入时文件大小 -->
	<constant name="struts.multipart.maxSize" value="1000000000" />
	
	<!-- 当Struts2的配置文件修改后，系统是否自动重新加载配置文件，默认值为false(生产环境下使用)，开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="false" />
	<!-- 开发模式下使用，这样可以打印出更详细的日志信息 -->
	<constant name="struts.devMode" value="false" />
	
	<package name="cement-interceptor" extends="json-default"
		namespace="/">
		<global-exception-mappings>
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		
	</package>

	<include file="com/sts/struts/weather/*.xml"></include> 
	<include file="com/sts/struts/train/*.xml"></include> 
	<include file="com/sts/struts/user/*.xml"></include> 
	<include file="com/sts/struts/air/*.xml"></include> 
	<include file="com/sts/struts/trafficValue/*.xml"></include> 
	<include file="com/sts/struts/suggestion/*.xml"></include> 
	<include file="com/sts/struts/complain/*.xml"></include> 
	<include file="com/sts/struts/breakRules/*.xml"></include>
	<include file="com/sts/struts/school/*.xml"></include>
	<include file="com/sts/struts/repair/*.xml"></include>
	<!-- 停车诱导 -->
	<include file="com/sts/struts/parking/*.xml"></include>
	<include file="com/sts/struts/news/*.xml"></include>
	<include file="com/sts/struts/bike/*.xml"></include>
	<include file="com/sts/struts/busStation/*.xml"></include>
	<include file="com/sts/struts/debug/*.xml"></include>
	<include file="com/sts/struts/favor/*.xml"></include>
	<include file="com/sts/struts/system/*.xml"></include>
	<include file="com/sts/struts/smartbus/*.xml"></include>
	<include file="com/sts/struts/download/*.xml"></include>
	<include file="com/sts/struts/taxi/*.xml"></include>
	<include file="com/sts/struts/parkingDB/*.xml"></include>
	<!-- 短信 -->
	<include file="com/sts/struts/message/*.xml"></include>
	<include file="com/sts/struts/trafficinfo/*.xml"></include>
	
	<include file="com/sts/struts/liveness/*.xml"></include>
	<include file="com/sts/struts/company/*.xml"></include>
	
	
</struts>
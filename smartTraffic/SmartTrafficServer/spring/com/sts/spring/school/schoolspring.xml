<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  

	<bean id="drivingSchoolAction" class="com.sts.school.action.DrivingSchoolAction" scope="prototype">
		<property name="drivingSchoolService" ref="drivingSchoolService"/>
	</bean>
	
	<bean id="drivingSchoolService" class="com.sts.school.service.DrivingSchoolService" scope="prototype">
		<property name="drivingSchoolDao" ref="drivingSchoolDao"/>
	</bean>

	<bean id="drivingSchoolDao" class="com.sts.school.dao.DrivingSchoolDao" scope="prototype">
		<property name="hibernateTemplate" ref="hibernateTemplateOracle"/>
	</bean>

</beans>

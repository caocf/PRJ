<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  

	<bean id="debugAction" class="com.sts.debug.action.DebugAction" scope="prototype">
		<property name="debugService" ref="debugService"  />
	</bean>

	<bean id="debugService" class="com.sts.debug.service.DebugService" scope="prototype">
		<property name="debugDao" ref="debugDao"  />
	</bean>
	
	<bean id="debugDao" class="com.sts.debug.dao.DebugDao" scope="prototype">
		<property name="hibernateTemplate" ref="hibernateTemplate"  />
	</bean>
	
</beans>

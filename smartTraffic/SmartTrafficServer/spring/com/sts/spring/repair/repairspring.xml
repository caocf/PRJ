<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  

	<bean id="carRepairAction" class="com.sts.repair.action.CarRepairAction" scope="prototype">
		<property name="carRepairService" ref="carRepairService"/>
	</bean>
	
	<bean id="carRepairService" class="com.sts.repair.service.CarRepairService" scope="prototype">
		<property name="carRepairDao" ref="carRepairDao"/>
	</bean>

	<bean id="carRepairDao" class="com.sts.repair.dao.CarRepairDao" scope="prototype">
		<property name="hibernateTemplate" ref="hibernateTemplateOracle"/>
	</bean>
	
	
	<bean id="callHelpAction" class="com.sts.repair.action.CallHelpAction" scope="prototype">
		<property name="callHelpService" ref="callHelpService"/>
	</bean>
	
	<bean id="callHelpService" class="com.sts.repair.service.CallHelpService" scope="prototype">
		<property name="callHelpDao" ref="callHelpDao"/>
	</bean>

	<bean id="callHelpDao" class="com.sts.repair.dao.CallHelpDao" scope="prototype">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>

</beans>

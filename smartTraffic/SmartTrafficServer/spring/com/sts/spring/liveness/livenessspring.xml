<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
     <!-- 配置DAO组件 -->
	<bean id="livenessDao" class="com.sts.liveness.dao.LivenessDao">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置业务逻辑组件 -->
 	<bean id="livenessService" class="com.sts.liveness.service.LivenessService">
		<property name="livenessDao" ref="livenessDao"></property>
	</bean>	


	<!-- 创建实例 -->
	<bean id="livenessAction" class="com.sts.liveness.action.LivenessAction"
		scope="prototype">
		<property name="livenessService" ref="livenessService"></property>
	</bean>

</beans>

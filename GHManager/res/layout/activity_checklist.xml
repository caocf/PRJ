<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#f5f5f5"
     android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/title_backgrundmenu" >

        <RelativeLayout
            android:id="@+id/relative_title_final"
            android:layout_width="wrap_content"
            android:layout_height="48dip" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_selector" 
                android:onClick="onViewClick" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:text="船舶检验信息"
                android:textColor="#1766b1"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7" />
    
    <ListView 
        android:id="@+id/lv_break"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:divider="#999999"       
        android:dividerHeight="1px" >
        
    </ListView>
      <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:drawableTop="@drawable/icon_no_message"
            android:drawablePadding="5dp"
            android:text="暂无数据"/>

</LinearLayout>

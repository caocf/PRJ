<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 首字母 -->
    <TextView
        android:id="@+id/addresslist_alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:paddingLeft="10dip"
        android:textColor="#FFFFFF"
        android:visibility="gone" />
    
    <!-- 联系人信息 -->
    <ImageView
        android:id="@+id/addresslist_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/addresslist_alpha"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/addresslist_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addresslist_imageView"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_toRightOf="@id/addresslist_imageView"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/addresslist_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/addresslist_name1"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/addresslist_name1"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceSmall" />

</RelativeLayout>
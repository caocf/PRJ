<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.hxkg.ghmanager.HomeActivity"
    android:background="#f5f5f5"
    android:showDividers="middle"
    android:divider="@drawable/linev" >    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu">
         <ImageButton 
              android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center|center"
        android:src="@drawable/ic_selector"
        android:background="@null"
        android:onClick="onBack"/>
        
        <TextView 
            android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textColor="#0067ac"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_gravity="center"/>       
        </LinearLayout>
        
    
    <!-- 原密码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff">        
        <TextView             
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="原密码" 
        android:layout_gravity="center"    /> 
        <EditText 
           android:id="@+id/edit_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"        
        android:textColorHint="#bebebe"
        android:hint="请输入原密码"
        android:background="@null"
        android:textColor="#333333"
        android:textSize="18sp"
         android:inputType="textPassword"
        android:layout_gravity="center"/>         
     </LinearLayout>
     <!-- 新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:background="#ffffff">        
        <TextView          
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        
        android:text="新密码"/> 
        <EditText 
            android:id="@+id/edit_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textColorHint="#bebebe"
        android:background="@null"
        android:textSize="18sp"
         android:inputType="textPassword"
        android:hint="请输入新密码"/>                
     </LinearLayout>
     
    <!-- 确认密码-->
    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:background="#ffffff">        
        <TextView 
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="确认密码"/>  
         <EditText 
            android:id="@+id/edit_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="16dp"
        android:background="@null"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textColorHint="#bebebe"
         android:inputType="textPassword"
        android:hint="请确认新密码"/>             
     </LinearLayout>
     <Button 
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center|center"
        android:background="@drawable/btn_bg"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:onClick="onChange"/> 
    
    
</LinearLayout>

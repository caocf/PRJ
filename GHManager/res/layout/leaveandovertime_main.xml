<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/addresslist_titeltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/leaveandovertime_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/leaveandovertime_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/leaveandovertime_button"
                android:textColor="#0067ac"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/leaveandovertime_leavebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_leave_item"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/leaveandovertime_leavebutton"
        android:textSize="18sp" />

    <Button
        android:id="@+id/leaveandovertime_overtimebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
       android:background="@drawable/bg_leave_item"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/leaveandovertime_overtimebutton"
        android:textSize="18sp" />

    <Button
        android:id="@+id/leaveandovertime_approvalbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_leave_item"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/leaveandovertime_approvalbutton"
        android:textSize="18sp" />

</LinearLayout>
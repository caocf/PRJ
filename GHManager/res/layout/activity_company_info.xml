<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/title_backgrundmenu" 
        android:orientation="horizontal"
        android:gravity="center|left">
 <ImageButton 
            android:id="@+id/back"
            android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="0"       
        android:src="@drawable/ic_selector"
        android:background="@null"
        android:layout_gravity="center"
        android:onClick="btnClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#1766b1"
            android:layout_toLeftOf="@+id/back"
            android:textSize="18sp"
            android:text="企业信息查询"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:focusable="true" 
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:paddingRight="16dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_gray_search" 
            android:onClick="onSearchName"/>

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawablePadding="10dp"
            android:ems="10"
            android:textColor="#666666"
            android:textSize="14sp"
            android:hint="请输入企业名称" 
            />

        <ImageView
            android:id="@+id/txt_clear"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close" 
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7" />

	<TextView
            android:id="@+id/tip"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_no_message"
            android:drawablePadding="5dp"
            android:text="暂无该企业数据"
            android:visibility="gone"/>
  

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        
         android:divider="#d7d7d7"
                android:dividerHeight="1dp">
    </ListView>

</LinearLayout>
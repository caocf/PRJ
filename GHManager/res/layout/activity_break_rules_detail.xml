            <TextView
                android:id="@+id/forcus5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative5"
                android:background="#d7d7d7"
                android:text="TextView" />

            <RelativeLayout
                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forcus5"
                android:background="#ffff" >

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="状态"
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text6_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/text6"
                    android:gravity="center_vertical"
                    android:paddingBottom="20dp"
                    android:text="浙江省嘉兴市南湖区"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/forcus6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative6"
                android:background="#d7d7d7"
                android:text="TextView" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
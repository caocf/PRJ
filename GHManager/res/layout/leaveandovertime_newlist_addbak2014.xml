<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaveandover_newlist_add_rtop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/leaveandovertime_newlist_add_titleR"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/leaveandovertime_newlist_add_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/leaveandovertime_newlist_add_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/leaveandovertime_newlist_add_back"
            android:gravity="fill_vertical"
            android:text="@string/leaveandovertime_newlist_add"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/leaveandovertime_newlist_add_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/le_submit" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/leaveandovertime_newlist_view_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leaveandovertime_newlist_add_titleR" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/leaveandovertime_newlist_viewtiteltable1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_leaveOrOtUser"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_view_leaveOrOtUser"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_leaveOrOtUserNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_kindName"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_newlist_kindName"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_kindNameNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leave_imgright"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_kindNameID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:id="@+id/leaveandovertime_newlist_add_address_tr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_address"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_view_travl"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/leaveandovertime_newlist_add_addressneirong"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical|right"
                        android:hint="@string/leaveandovertime_add_address"
                        android:paddingRight="10dp"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_beginDate"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_view_beginDate"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_beginDateNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leave_imgright"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_view_endDate"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_endDateNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leave_imgright"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_lastDate"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_view_lastDate"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_lastDateNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_approvalID1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_ApprovalID1"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_approvalID1Neirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_ApprovalID1ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:id="@+id/leaveandovertime_newlist_add_tr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_approvalID2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_ApprovalID2"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_approvalID2Neirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>

                <CheckBox
                    android:id="@+id/cbApprovalID2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp" />
                
                </TableRow>

                <TableRow
                    android:id="@+id/leaveandovertime_newlist_add_tr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_view_approvalID3"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/leaveandovertime_ApprovalID3"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_approvalID3Neirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="18sp" >
                    </TextView>

                <CheckBox
                    android:id="@+id/cbApprovalID3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" >

                    <TextView
                        android:id="@+id/leaveandovertime_newlist_add_leaveOrOtReason"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/leaveandovertime_view_leaveOrOtReason"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/leaveandovertime_newlist_add_leaveOrOtReasonNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:text="@string/leaveandovertime_newlist_leaveOrOtReason"
                        android:textColor="#A3A3A3"
                        android:textSize="18sp" >
                    </EditText>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
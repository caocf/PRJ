<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/devider"
    android:showDividers="middle" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"       
        android:background="@null"
        android:src="@drawable/ic_selector"
        android:onClick="onViewClick"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="违章对象"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"/>
       
        
        </LinearLayout>
        
        
    <!-- 内容-->
   
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="当事人"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/firstman"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:textSize="16sp"
        android:textColor="#333333"
        android:hint="请输入当事人"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <RadioGroup 
           android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton 
            android:id="@+id/b1"
            android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="男" />
        <RadioButton 
            android:id="@+id/b2"
            android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="女" />
           
       </RadioGroup>
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="身份证号"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/secman"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
         android:background="@null"
         android:textSize="16sp"
        android:textColor="#333333"
        android:hint="请输入身份证号"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
 
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="法定代表人"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/lawman"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入法定代表人"
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="职务"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/duty"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入职务"
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:focusable="true"
        android:gravity="center|left">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="电话"
        android:textColor="#666666"
        android:textSize="16sp" 
             
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/desc"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="16dp"
        android:hint="请输入电话"
        android:inputType="number"  
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  
        
  <LinearLayout
       android:id="@+id/tolocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
        android:onClick="onViewClick">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="邮编地址"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText
           android:id="@+id/location"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:hint="请输入邮编地址"
        android:background="@null"
        android:textColor="#333333"
        android:layout_weight="1"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  
 <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:text="确定"
            android:padding="16dp"
            android:background="#1766b1"
            android:textColor="#ffffff"
            android:onClick="Submit"/>
        
</LinearLayout>
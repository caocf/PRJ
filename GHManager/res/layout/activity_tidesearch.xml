<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.hxkg.ghmanager.HomeActivity"
    android:background="#f5f5f5"
    android:showDividers="middle"
    android:divider="@drawable/linev" >    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu">
         <ImageButton 
              android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center|center"
        android:background="@drawable/ic_selector"
        android:onClick="onView"/>
        
        <TextView 
            android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的账户"
        android:layout_marginLeft="16dp"
        android:textColor="#0067ac"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:onClick="onView"/>       
        </LinearLayout>
    
    <!-- 用户名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#ffffff">        
        <TextView             
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="用户名"        
        android:layout_weight="1"
        android:layout_gravity="left|center"/> 
        <TextView 
           android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="#333333"
        android:layout_weight="0"
        android:textSize="18sp"/>         
     </LinearLayout>
     <!-- 手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#ffffff">        
        <TextView          
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="手机号"
        android:layout_weight="1"
        android:layout_gravity="left|center"/> 
        <TextView 
            android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginRight="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_weight="0"/>                
     </LinearLayout>
     
    <!-- 修改密码-->
    <LinearLayout
        android:id="@+id/changepsw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:onClick="onView">        
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="修改密码"
        android:layout_weight="1"
        android:layout_gravity="left|center"/>  
        <ImageButton 
            
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="16dp"
        android:layout_gravity="center|center"
        android:background="@drawable/icon_right"
        android:onClick="onView"/>       
     </LinearLayout>
     <Button 
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center|center"
        android:background="#ff2323"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:onClick="onView"/> 
    
    
</LinearLayout>

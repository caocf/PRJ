<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"       
        android:background="@null"
        android:src="@drawable/ic_selector"
        android:onClick="onViewClick"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简易执法"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"/>
         <TextView 
             android:id="@+id/myevidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的简易执法"
        android:textColor="#333333"
        android:textSize="18sp"
         android:layout_weight="0"
        android:layout_marginRight="16dp"
        android:onClick="onViewClick"
        android:visibility="gone"/>
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp" 
        android:background="#ffffff">
         
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="取证"
        android:textColor="#6cb0f1"
        android:layout_weight="1"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_jianyi_take_the_evidence"/>
        
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="处罚"
        android:layout_weight="1"
        android:textColor="#6cb0f1"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_jianyi_punish"/>
        
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="完成"
        android:layout_weight="1"
        android:textColor="#333333"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_jianyi_finished_gray"/>
            
        </LinearLayout>
        
        <TextView 
           android:layout_width="match_parent"
        android:layout_height="1dp" 
        android:background="#dcdcdc" />
         <TextView 
           android:layout_width="match_parent"
        android:layout_height="20dp" 
        android:background="#f5f5f5" />
        
    <!-- 内容-->
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:divider="@drawable/devider"
    android:showDividers="middle"
    android:focusable="true"
    android:focusableInTouchMode="true">
 
 
  <LinearLayout
      
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
       >
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="依据法律"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <EditText 
            android:id="@+id/depend"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入依据法律"
        android:textSize="16sp"
        android:background="@null"
        android:layout_weight="1"
        android:textColorHint="#bebebe"/>
       <ImageButton 
            android:id="@+id/ldepend"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="16dp"        
        android:background="@drawable/icon_right"
        android:visibility="visible"
        android:onClick="onViewClick"/>
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center"
        android:focusable="true"
        android:onClick="onViewClick">
       <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="1"       
        android:layout_marginLeft="16dp"/>
       <EditText 
           android:id="@+id/n1"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:textColor="#333333"
        android:textSize="16dp"
        android:hint="输入数字"
        android:gravity="center"
        android:layout_weight="2"
        android:background="@null"
        android:textColorHint="#bebebe"/>         
       <TextView 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#333333"
        android:text="条，第"
        android:textSize="16sp" 
        android:layout_weight="1"
        android:background="@null"
        android:textColorHint="#bebebe"/>
       <EditText 
           android:id="@+id/n2"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:textColor="#333333"
        android:textSize="16dp"
        android:hint="输入数字"
        android:gravity="center"
        android:layout_weight="2"
        android:background="@null"
        android:textColorHint="#bebebe"/>
        <TextView 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#333333"
        android:text="款，第"
        android:textSize="16sp" 
        android:layout_weight="1"
        android:background="@null"
        android:textColorHint="#bebebe"/>
        <EditText 
           android:id="@+id/n3"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#333333"
        android:textSize="16dp"
        android:hint="输入数字"
        android:gravity="center"
        android:layout_weight="2"
        android:background="@null"
        android:textColorHint="#bebebe"/>
        <TextView 
           android:id="@+id/n4"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:textColor="#333333"
        android:text="项"
        android:layout_weight="1"
        android:textSize="16sp" 
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="补充意见"
        android:paddingTop="10dp"
        android:textColor="#666666"
        android:textSize="16sp"        
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/suggest"
         android:layout_width="wrap_content"
        android:layout_height="100dp"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:gravity="top"
        android:paddingTop="10dp"
        android:textSize="16dp"
        android:hint="请输入补充意见"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
        
  <LinearLayout
       android:id="@+id/tolocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
        android:onClick="onViewClick">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="处罚措施"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText
           android:id="@+id/number"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:hint="请输入处罚措施"
        android:background="@null"
        android:textColor="#333333"
        android:layout_weight="1"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  
 <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1" 
            android:layout_gravity="center"
            android:text="提交并打印处罚决定书"
            android:padding="16dp"
            android:background="#1766b1"
            android:textColor="#ffffff"
            android:onClick="Submit"/>
        
 </LinearLayout> 
  </ScrollView>
</LinearLayout>
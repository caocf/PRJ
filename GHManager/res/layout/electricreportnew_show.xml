<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/electricreport_see_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/electricreport_see_titleText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/electricreport_see_back"
            android:gravity="center_vertical"
            android:text="@string/electricreport_content"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/leaveandovertime_newlist_view_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_name"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_kind"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreportnew_show_kind"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_name"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_shipUserName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_time"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_arrival"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:id="@+id/electricreport_rl_outorin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/wharfwork_view_portMart"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_outorin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_address1"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_show_address1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_address2"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_show_address2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:id="@+id/electricreport_rl_wharf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_pier"
                    android:textColor="@color/Light_gray"

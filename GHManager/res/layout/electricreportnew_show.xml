                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_arrival"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/electricreport_show_arrivaltime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_show_draft"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/electricreport_show_draft"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_show_drafttime"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/electricreport_show_drafttime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/setup_boatman_title"
                    android:textColor="@color/Light_black"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <com.huzhouport.leaveandovertime.MultiListView
                    android:id="@+id/electricreport_show_boatman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2" >
                </com.huzhouport.leaveandovertime.MultiListView>
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
     >

    <TableLayout
        android:id="@+id/dangerousgoodsjob_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/dangerousgoodsjob_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/dangerousgoodsjob_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:gravity="center_vertical"
                android:text="@string/dangerousgoodsjob_button1"
                android:textColor="#0067ac"
                android:textSize="18sp" />

              <ImageButton
                android:id="@+id/dangerousgoodsjob_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_search" />
             <ImageButton
                android:id="@+id/dangerousgoodsjob_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_add" />
            
              
            
        </TableRow>
    </TableLayout>
     <TableLayout
            android:id="@+id/dangerousgoodsjob_table2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/title_backgrundmenu"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:stretchColumns="1"
            android:visibility="invisible" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <com.huzhouport.common.util.ClearEditText
                    android:id="@+id/dangerousgoodsjob_searchtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="5"
                    android:background="@drawable/search_background"
                    android:drawableLeft="@drawable/search_icon"
                    android:drawableRight="@drawable/clear"
                    android:hint="@string/addresslist_search"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/dangerousgoodsjob_search1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/addresslist_quxiao" />

                <Button
                    android:id="@+id/dangerousgoodsjob_search2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/addresslist_search"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>
  

    
       <ListView
        android:id="@+id/dangerousgoodsjob_viewlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/dangerousgoodsjob_table"
       >
    </ListView>
    
    
    
    

  

</RelativeLayout>
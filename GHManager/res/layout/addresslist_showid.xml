<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/addresslist_titeltable2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/addresslist_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/addresslist_title1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/addresslist_button1"
                android:textColor="#0067ac"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addresslist_titeltable2" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    
    
    <ImageView
        android:id="@+id/addresslist_imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/address_back" >
    </ImageView>
    
    <ImageView
        android:id="@+id/addresslist_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addresslist_imageView1"
         android:layout_marginTop="30dp"
         android:layout_marginLeft="30dp"
        android:background="@drawable/address_head" >
    </ImageView>
    

    <TextView
        android:id="@+id/addresslist_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addresslist_imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp" 
        android:textColor="@color/white"
        
        >
    </TextView>

    <TextView
        android:id="@+id/addresslist_textView1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addresslist_imageView1"
        android:background="@color/grey"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#333"
        android:text="@string/addresslist_tel"
        android:textSize="14sp" >
    </TextView>
    
     <com.huzhouport.leaveandovertime.MultiListView
                android:id="@+id/addresslist_show_viewlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addresslist_textView1" />
    
 
    <TextView
        android:id="@+id/addresslist_textView2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addresslist_show_viewlist"
        android:background="@color/grey"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/addresslist_del"
        android:textSize="14sp" 
        android:textColor="#333"/>

    <TextView
        android:id="@+id/addresslist_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addresslist_textView2"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="18sp" 
        android:textColor="#333"/>
          </RelativeLayout>
    </ScrollView>
    
</RelativeLayout>
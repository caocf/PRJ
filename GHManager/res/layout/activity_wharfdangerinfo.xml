<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent_view2"
    android:background="#f5f5f5"  >
    
    
    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
         android:background="@drawable/title_backgrundmenu">

        <RelativeLayout
            android:id="@+id/relative_title_final"
            android:layout_width="wrap_content"
            android:layout_height="48dip" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_selector" 
            android:background="@null"
            android:onClick="onView"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back"
            android:text="危险货物作业详情"
            android:textColor="#1766b1"
            android:textSize="18sp" />
        
        </RelativeLayout>        
    </RelativeLayout>
   
    
     <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff">
            <TextView 
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
            
       
         <TextView 
            android:id="@+id/status"
            android:textColor="#666666"
            android:textSize="14sp"
            android:background="#ffffff"
             android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>  
</LinearLayout>
    
         <TextView
	        android:id="@+id/forcus1"
	        android:layout_below="@+id/relative1"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        
	        android:background="#d7d7d7"
	        android:text="TextView" />     
          <TextView
	        android:layout_below="@+id/relative1"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_marginTop="20dp"
	        android:background="#d7d7d7"
	        android:text="TextView" /> 
    
    <RelativeLayout 
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff">
        <TextView 
            android:id="@+id/text1"
            android:layout_width="100dp"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="船舶"/>
         <TextView 
            android:id="@+id/shipname"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>         
        
    </RelativeLayout>
     <TextView
	        
	        android:layout_below="@+id/relative1"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#d7d7d7"
	        android:text="TextView" />
      <RelativeLayout 
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forcus1"
        android:background="#ffff">
        <TextView 
            android:id="@+id/text2"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_width="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="始发港"/>
         <TextView 
            android:id="@+id/start"
            
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>      
    </RelativeLayout>
     <TextView	
         	android:id="@+id/forcus2"  
         	android:layout_below="@+id/relative2"      
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#d7d7d7"
	        android:text="TextView" />

     <TextView
         	android:id="@+id/forcus5"
         	android:layout_below="@+id/relative5"	        
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#d7d7d7"
	        android:text="TextView" />
     
     
     <RelativeLayout 
        android:id="@+id/relative6"
        android:layout_below="@+id/forcus5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true" 
		android:focusableInTouchMode="true" 
        
        android:background="#ffff">
        <TextView 
            android:id="@+id/text6"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_width="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="货物总量"/>
         <TextView
            android:id="@+id/tons"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/text6"
            android:layout_width="165dp"
            android:background="@null"
            android:layout_height="wrap_content" />  
    </RelativeLayout>
    
     <TextView
         	android:id="@+id/forcus7"
         	android:layout_below="@+id/relative6"	        
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#d7d7d7"
	        android:text="TextView" />
     
      <RelativeLayout 
        android:id="@+id/relative8"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff">
        <TextView 
            android:id="@+id/text8"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_width="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="作业开始时间"/>
         <TextView 
            android:id="@+id/time"
            android:textColor="#333333"
            android:textSize="16sp"
             android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <RelativeLayout
        android:id="@+id/fragment_set_leave_titleR"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/fragment_set_leave_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/fragment_set_leave_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/fragment_set_leave_back"
            android:gravity="fill_vertical"
            android:text="@string/fragment_set_leave"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/fragment_set_leave_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/le_submit" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_set_leave_tv1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fragment_set_leave_titleR"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/leaveandovertime_view_approvalName"
        android:textColor="@color/Light_black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/fragment_set_leave_tv2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_set_leave_titleR"
        android:layout_toRightOf="@+id/fragment_set_leave_tv1"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:textColor="@color/Light_gray"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/fragment_set_leave_tv2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_set_leave_titleR"
        android:layout_toRightOf="@+id/fragment_set_leave_tv2"
        android:visibility="gone" >
    </TextView>

    <Button
        android:id="@+id/fragment_set_leave_bu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_set_leave_tv1"
        android:background="@color/grey"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/fragment_set_leave_tv3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fragment_set_leave_bu"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/leaveandovertime_ApprovalID2"
        android:textColor="@color/Light_black"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_set_leave_tv4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_set_leave_bu"
        android:layout_toRightOf="@+id/fragment_set_leave_tv3"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:textColor="@color/Light_gray"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_set_leave_tv4_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_set_leave_bu"
        android:layout_toRightOf="@+id/fragment_set_leave_tv4"
        android:visibility="gone" >
    </TextView>

    <Button
        android:id="@+id/fragment_set_leave_bu2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_set_leave_tv3"
        android:background="@color/grey"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_set_leave_tv5"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fragment_set_leave_bu2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/leaveandovertime_ApprovalID3"
        android:textColor="@color/Light_black"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_set_leave_tv6"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_set_leave_bu2"
        android:layout_toRightOf="@+id/fragment_set_leave_tv5"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:textColor="@color/Light_gray"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_set_leave_tv6_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_set_leave_bu2"
        android:layout_toRightOf="@+id/fragment_set_leave_tv6"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lll"
    android:background="#f5f5f5" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       android:background="@drawable/title_backgrundmenu">
         <ImageButton 
              android:id="@+id/back"
            android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:layout_gravity="center|center"
        android:src="@null"
        android:background="@drawable/ic_selector"
        android:onClick="onViewClick"/>
        
        <TextView 
            android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="巡航中"
        android:textColor="#0067ac"
            android:textSize="18sp" 
        android:layout_weight="1"
        android:layout_gravity="center"
        android:onClick="onViewClick"/>       
        </LinearLayout>
        
    <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <!-- 地图 -->
        <fragment
        android:id="@+id/map_fragment"
        android:name="net.hxkg.cruise.MapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"/>
        
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#e6ffffff"
        android:gravity="center">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
         <TextView 
             android:id="@+id/miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:gravity="center"
        android:textColor="#333333"
            android:textSize="18sp" /> 
            <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="里程/Km"
        android:gravity="center"
        android:textColor="#777777"
            android:textSize="12sp" /> 
        </LinearLayout>
            
        <TextView 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#d7d7d7"
        android:layout_weight="0"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/> 
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
         <TextView 
             android:id="@+id/things"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="#333333"
            android:textSize="18sp" /> 
            <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录/件"
        android:gravity="center"
        android:textColor="#777777"
            android:textSize="12sp" /> 
        </LinearLayout>        
   </LinearLayout>
    
        </RelativeLayout>
    
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bg"
        android:gravity="center">
        
         <TextView 
             android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束"
        android:gravity="center"
        android:drawableTop="@drawable/ic_over_3x"
        android:drawablePadding="6dp"
        android:textColor="#333333"
            android:textSize="14sp" 
        android:layout_weight="1"
        android:onClick="onViewClick"/> 
            
        <TextView 
            android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录"
        android:gravity="center"
        android:drawableTop="@drawable/ic_camera"
        android:drawablePadding="6dp"
        android:textColor="#333333"
            android:textSize="14sp" 
        android:layout_weight="1"
        android:onClick="onViewClick"/> 
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:gravity="center"
        android:drawableTop="@drawable/ic_search"
        android:drawablePadding="6dp"
        android:textColor="#333333"
            android:textSize="14sp" 
        android:layout_weight="1"/> 
        
   </LinearLayout>
       
</LinearLayout>

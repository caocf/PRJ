<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/fixedtermreport_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/fixedtermreport_mainlist_back"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/fixedtermreport_mainlist_titleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/fixedtermreport_list"
                android:textColor="#0067ac"
                android:textSize="18sp" >
            </TextView>

            <ImageButton
                android:id="@+id/fixedtermreport_mainlist_searchreportadd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/title_search" />

            
        </TableRow>
    </TableLayout>

    <ExpandableListView
        android:id="@+id/fixedtermreport_mainlist_datalist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fixedtermreport_table" >
    </ExpandableListView>
</RelativeLayout>

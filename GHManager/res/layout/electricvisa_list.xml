<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/electricvisa_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/electricvisa_list_back"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/electricvisa_list_titleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/electricvisa_list"
                android:textColor="#0067ac"
                android:textSize="18sp" >
            </TextView>

            <ImageButton
                android:id="@+id/electricvisa_list_searchvisaadd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/title_search" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/electricvisa_table2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="1"
        android:visibility="invisible" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" >

            <com.huzhouport.common.util.ClearEditText
                android:id="@+id/electricvisa_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:background="@drawable/search_background"
                android:drawableLeft="@drawable/search_icon"
                android:drawableRight="@drawable/clear"
                android:hint="@string/electricvisa_search"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="17sp" />

            <Button
                android:id="@+id/electricvisa_search1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electricvisa_quxiao" />

            <Button
                android:id="@+id/electricvisa_search2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electricvisa_search"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/electricvisa_table1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/electricvisa_table"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/electricvisa_list_qz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electricvisa_list_qz"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/electricvisa_list_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electricvisa_list_me"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/electricvisa_list_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electricvisa_list_all"
                android:textSize="18sp" >
            </TextView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/electricvisa_table_text"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/electricvisa_table1"
        android:background="#d8d8d8" />


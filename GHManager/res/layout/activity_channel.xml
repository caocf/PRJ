<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center"
        android:onClick="onViewClick">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="16dp"        
        android:background="@drawable/ic_selector"
        android:onClick="onViewClick"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增航道巡查日志"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"
        android:layout_marginLeft="16dp" />
        
        
        </LinearLayout>
        
    <!-- 内容-->
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true">
    
    
              
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="航道巡查"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <net.hxkg.channel.ChannelSpinner
            android:id="@+id/channelspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" />
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
        android:visibility="gone">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="开始时间"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/time1"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请选择开始时间"
        android:textSize="16sp"
        android:text="2016-11-03 08:30"
        android:background="@null"
        android:textColorHint="#bebebe"
        android:onClick="onDate"/>   />
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
         android:visibility="gone">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="结束时间"
        
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>  
        <TextView 
           android:id="@+id/time2"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请选择结束时间"
        android:text="2016-11-03 08:30"
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"
        android:onClick="onDate"/> 
             
  </LinearLayout>
 <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
         android:visibility="gone">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="起点"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>

       <EditText
           android:id="@+id/start1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="16dp"
           android:background="@null"
           android:ems="10"
           android:hint="请输入起点"
           android:textColor="#333333"
           android:textColorHint="#bebebe"
           android:textSize="16sp" >

           <requestFocus />
       </EditText>

  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout
       android:id="@+id/toreason"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true" 
         android:visibility="gone">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="终点"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/stop1"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入终点"
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
       <ImageButton 
            
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="16dp"        
        android:background="@drawable/icon_right"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout
      
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true" 
         android:visibility="visible">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="起点桩号"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/zstartn"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入起点桩号"
        android:textSize="16sp" 
        android:layout_weight="1"
        android:background="@null"
        android:textColorHint="#bebebe"/>
       <ImageButton 
            
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="16dp"        
        android:background="@drawable/icon_right"
        android:visibility="gone"/>
  </LinearLayout>

  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout
       
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true" 
         android:visibility="visible">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="终点桩号"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/zstopn"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入终点桩号"
        android:textSize="16sp" 
        android:layout_weight="1"
        android:background="@null"
        android:textColorHint="#bebebe"/> 
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true" >
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="参加人员"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/menber"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请选择参加人员"
        android:textSize="16sp" 
        android:layout_weight="1"
        android:background="@null"
        android:textColorHint="#bebebe"/>
       <ImageButton 
            
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="16dp"        
        android:background="@drawable/icon_right"
        android:visibility="gone"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true" >
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="总体情况"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <net.hxkg.channel.GeneralSpinner
            android:id="@+id/generalspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" /> 
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true" >
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="处理部门"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
     <net.hxkg.channel.DepSpinner
            android:id="@+id/depspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp" 
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" 
            
            android:background="@drawable/bg_spinner" /> 
      
  </LinearLayout>
   <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  
 <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1" 
            android:layout_gravity="center"
            android:text="下一步，录入巡查情况"
            android:padding="16dp"
            android:background="@drawable/button_selector"
            android:textColor="#ffffff"
            android:onClick="Next"/>
        
 </LinearLayout> 
  </ScrollView>
</LinearLayout>
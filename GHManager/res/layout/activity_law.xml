<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="center|left">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"       
        android:src="@drawable/ic_selector"
        android:background="@null"
        android:layout_gravity="center"
        android:onClick="onViewClick"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执法取证"
        android:gravity="center|left"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"/>
         <TextView 
             android:id="@+id/myevidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的取证"
        android:textColor="#333333"
        android:textSize="14sp"
         android:layout_weight="0"
        android:layout_marginRight="16dp"
        android:onClick="onViewClick"/>
        
        </LinearLayout>
        
    <!-- 内容-->
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true">
    
    
              
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="第一执法人"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <TextView 
           android:id="@+id/firstman"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <LinearLayout
      android:id="@+id/secl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:background="@drawable/layoutselector"
        android:gravity="left|center"
        android:focusable="true"
        android:onClick="onViewClick" >
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="第二执法人"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <net.hxkg.lawexcut.EvidenceGridView
        android:id="@+id/gridView1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:paddingBottom="2dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
         /> 
        <ImageButton 
            android:id="@+id/imb"
          android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_add"
        android:background="@null"
        android:onClick="onViewClick"  />
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="违章类别"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>  
         <net.hxkg.lawexcut.Lawtypespinner 
            android:id="@+id/spinner"
         android:layout_width="80dp"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_spinner"/>  
             
  </LinearLayout>
 <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="违章对象"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/target"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="请输入违章对象"
        android:textSize="16sp"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
   <LinearLayout
       android:id="@+id/toreason"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
         android:background="@drawable/layoutselector"
        android:gravity="left|center"
        android:focusable="true"
        android:onClick="onViewClick">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="违章缘由"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <TextView 
           android:id="@+id/reason"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:hint="选择违章缘由"
        android:textSize="16sp" 
        android:layout_weight="1"
        android:background="@null"
        android:textColorHint="#bebebe"/>
       <ImageButton 
            
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="16dp"        
        android:background="@drawable/icon_right"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="违章描述"
        android:paddingTop="10dp"
        android:textColor="#666666"
        android:textSize="16sp"        
        android:layout_marginLeft="16dp"/>         
       <EditText 
           android:id="@+id/desc"
         android:layout_width="wrap_content"
        android:layout_height="100dp"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:gravity="top"
        android:paddingTop="10dp"
        android:textSize="16dp"
        android:hint="简要描述一下情况"
        android:background="@null"
        android:textColorHint="#bebebe"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  <net.hxkg.lawexcut.EvidenceGridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_marginBottom="12dp"
        android:numColumns="4"
        android:background="#ffffff"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" /> 
        <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
        
  <LinearLayout
       android:id="@+id/tolocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true"
        android:onClick="onViewClick">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="所在位置"
        android:textColor="#666666"
        android:textSize="16sp"  
        android:layout_weight="0"       
        android:layout_marginLeft="16dp"/>         
       <EditText
           android:id="@+id/location"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:hint="输入当前位置"
        android:background="@null"
        android:textColor="#333333"
        android:layout_weight="0"
        android:textColorHint="#bebebe"/>
        <TextView
           android:id="@+id/locationtext"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="3dp"
        android:textSize="16sp"
         android:layout_weight="1"
        android:textColor="#333333"
        android:textColorHint="#bebebe"/>
       <ImageButton 
            android:id="@+id/imlocation"
            android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:layout_gravity="center|right"       
        android:src="@drawable/ic_place"
        android:background="@null"
        android:onClick="onViewClick"/>
  </LinearLayout>
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bebebe"/>
  
 <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1" 
            android:layout_gravity="center"
            android:text="提交"
            android:padding="16dp"
            android:background="@drawable/button_selector"
            android:textColor="#ffffff"
            android:onClick="Submit"/>
        
 </LinearLayout> 
  </ScrollView>
</LinearLayout>
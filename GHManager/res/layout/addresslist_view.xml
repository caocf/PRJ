<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/addresslist_titeltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/addresslist_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/addresslist_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/addresslist_button"
                android:textColor="#0067ac"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/addresslist_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/title_search" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/addresslist_titeltable1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_background2"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="1"
        android:visibility="invisible" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" >

            <com.huzhouport.common.util.ClearEditText
                android:id="@+id/addresslist_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:background="@drawable/search_background"
                android:drawableLeft="@drawable/search_icon"
                android:drawableRight="@drawable/clear"
                android:hint="@string/addresslist_search"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="17sp" />

            <Button
                android:id="@+id/addresslist_search1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/addresslist_quxiao" />

            <Button
                android:id="@+id/addresslist_search2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/addresslist_search"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>

    <ExpandableListView
        android:id="@+id/addresslist_viewlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addresslist_titeltable"
        >
    </ExpandableListView>

  
</RelativeLayout>
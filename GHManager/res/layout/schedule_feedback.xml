<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
         >

        <ImageButton
            android:id="@+id/schedule_feedback_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/schedule_feedback_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/schedule_feedback_back"
            android:text="@string/schedule_activity"
            android:textColor="#0067ac"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/schedule_feedback_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:listSelector="@android:color/transparent">
    </ListView>

</LinearLayout>
<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="net.modol.CruiseLogEN" table="cruise_log" schema="zjmanager">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="recordtime">
            <column name="recordtime"   not-null="true"/>
        </property>
        <property name="location">
            <column name="location" sql-type="varchar(255)" not-null="false"/>
        </property>
        <set name="cruiseFileENs" lazy="false">
            <key column="logid"></key>
            <one-to-many class="net.modol.CruiseFileEN"></one-to-many>
        </set>
        <many-to-one name="cruiseRecordEN" lazy="false">
            <column name="cruiseid"/>
        </many-to-one>
    </class>
</hibernate-mapping>
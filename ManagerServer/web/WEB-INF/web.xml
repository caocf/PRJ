    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/ErrorPage/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/ErrorPage/error.jsp</location>
    </error-page>
  <error-page>
        <error-code>404</error-code>
        <location>/ErrorPage/error.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>Login/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
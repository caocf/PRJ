<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setup_boatman_titleR"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/setup_boatman_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/setup_boatman_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/setup_boatman_back"
            android:gravity="fill_vertical"
            android:text="@string/setup_boatman_select"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/setup_boatman_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/le_submit" />
    </RelativeLayout>

    <ListView
        android:id="@+id/setup_boatman_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listline2"
        android:dividerHeight="0dp" />

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/fixedtermreport_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/fixedtermreport_list_back"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/fixedtermreport_list_titleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/fixedtermreport_list"
                android:textColor="#0067ac"
                android:textSize="18sp" >
            </TextView>

            <ImageButton
                android:id="@+id/fixedtermreport_list_searchreportadd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/title_search" />

            <!--
                 <ImageButton
                android:id="@+id/fixedtermreport_list_addreport"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/title_add" />
            -->
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/fixedtermreport_table2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="1"
        android:visibility="invisible" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" >

            <com.huzhouport.common.util.ClearEditText
                android:id="@+id/fixedtermreport_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:background="@drawable/search_background"
                android:drawableLeft="@drawable/search_icon"
                android:drawableRight="@drawable/clear"
                android:hint="@string/electricvisa_search"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="17sp" />

            <Button
                android:id="@+id/fixedtermreport_search1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electricvisa_quxiao" />

            <ImageButton
                android:id="@+id/fixedtermreport_search2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:src="@drawable/le_select"
                android:text="@string/electricvisa_search"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/table12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fixedtermreport_table" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fixedtermreport_list_shipname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fixedtermreport_list_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fixedtermreport_list_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tableRow17"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/table12"
        android:background="#d8d8d8" />

    <ListView
        android:id="@+id/fixedtermreport_main_list"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/tableRow1"
        android:layout_below="@id/table12" >
    </ListView>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#f5f5f5"
        android:padding="10dp" >

        <TextView
            android:id="@+id/fixedtermreport_list_mark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbt_list_markcome"
            android:gravity="center|center_vertical"
            android:padding="3dp"
            android:text="@string/no_regularvisa"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/fixedtermreport_list_mark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/imgbt_list_markout"
            android:gravity="center|center_vertical"
            android:padding="3dp"
            android:text="@string/no_regularvisa"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </TableRow>

</RelativeLayout>
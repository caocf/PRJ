<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >

    <RelativeLayout
        android:id="@+id/electricreportnew_add_rl1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/electricreport_see_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/electricreport_see_titleText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/electricreport_see_back"
            android:gravity="center"
            android:text="@string/electricreportnew_add"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>

        <ImageButton
            android:id="@+id/electricreport_see_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/le_submit" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/leaveandovertime_newlist_view_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/electricreportnew_add_rl2"
        android:layout_below="@id/electricreportnew_add_rl1" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_name"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:drawableRight="@drawable/leave_imgright"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_kind"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreportnew_show_kind"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:id="@+id/electricreport_see_shipUserName_tr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_name"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_shipUserName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:id="@+id/electricreport_see_arrival_tr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_time"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_see_arrival"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_address1"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_show_address1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:drawableRight="@drawable/leave_imgright"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_show_address1_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreportnew_show_address2"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_show_address2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:drawableRight="@drawable/leave_imgright"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/electricreport_show_address2_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/electricreport_show_tr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_type"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/electricreport_see_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:drawableRight="@drawable/leave_imgright"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:id="@+id/electricreport_show_tr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_cargoNumber"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/electricreport_see_cargoNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:hint="@string/electricreport_main_inputcargoNumber"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textSize="17sp" >
                </EditText>

                <TextView
                    android:id="@+id/electricreport_add_uniti"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:drawableRight="@drawable/leave_imgright"
                    android:gravity="right|center_vertical"
                    android:text="吨"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_pier"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/electricreport_show_pier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:drawableRight="@drawable/leave_imgright"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_main_arrival"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/electricreport_show_arrivaltime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Light_gray"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/electricreport_show_draft"
                    android:textColor="@color/Light_gray"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/electricreport_show_draft"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_span="2"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:hint="@string/electricreport_main_inputcargoNumber"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textSize="17sp" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white" >

                <com.huzhouport.common.util.MultiListView
                    android:id="@+id/setup_boatman_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/electricreportnew_add_rl2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:padding="5dp"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/electricreportnew_add_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/electricreportnew_submit" />

        <ImageButton
            android:id="@+id/electricreportnew_add_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/electricreportnew_back" />
    </RelativeLayout>

</RelativeLayout>
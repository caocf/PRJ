<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/knowledge_listtext_titeltable1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/knowledge_listtext_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/knowledge_listtext_title1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/portnotice_main"
                android:textColor="#0067ac"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/knowledge_listtext_titeltable1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

       <TextView
                android:id="@+id/knowledge_listtext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" 
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="16dp"/>
        <TextView
                android:id="@+id/knowledge_listtext_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp" 
                android:layout_below="@id/knowledge_listtext_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="right|center_vertical"
                
                />
            <TextView
                android:id="@+id/knowledge_listtext_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="16dp"
                android:textSize="17sp" 
                android:layout_below="@id/knowledge_listtext_time"
                android:gravity="center_vertical"
                android:visibility="gone"
                />
                  <TextView
                android:id="@+id/knowledge_listtext_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" 
                android:layout_marginTop="16dp"
                android:textSize="17sp" 
                android:layout_below="@id/knowledge_listtext_summary"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="10dp" >
    
        <TextView
            android:id="@+id/dangerousgoodsjob_shipName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp" />
    
            <TextView
            android:id="@+id/dangerousgoodsjob_wharfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@id/dangerousgoodsjob_shipName"
            android:layout_toLeftOf="@+id/dangerousgoodsjob_declareTime"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
 
             />  
        <TextView
            android:id="@+id/dangerousgoodsjob_declareTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@id/dangerousgoodsjob_shipName"
            android:layout_alignParentRight="true"
             />  
          <TextView
        android:id="@+id/dangerousgoodsjob_declareID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />           

</RelativeLayout>

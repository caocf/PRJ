<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addresslist_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/knowledge_titeltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/knowledge_new_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/knowledge_new_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/portnotice_main"
                android:textColor="#0067ac"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/knowledge_new_zhuye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/address_zhuye" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/knowledge_new_searchtextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/knowledge_titeltable"
         android:layout_toLeftOf="@+id/knowledge_new_searchbutton"
         android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="30dp"
        android:background="@drawable/address_select"
        android:inputType="text"
        android:singleLine="true" 
        android:hint="@string/search"/>
    
    <ImageButton 
        android:id="@+id/knowledge_new_searchbutton"
        android:layout_alignParentRight="true" 
        android:src="@drawable/address_serech"
        android:background="@color/transparent"
        android:layout_marginTop="10dp"
         android:layout_marginLeft="6dp"  
        android:layout_marginRight="10dp" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/knowledge_titeltable"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/knowledge_new_searchtextname" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <com.huzhouport.knowledge.MultiListView
                android:id="@+id/knowledge_new_viewlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
             <TextView 
                android:id="@+id/knowledge_new_viewlist_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_below="@id/knowledge_new_viewlist"/>
            <com.huzhouport.knowledge.MultiListView
                android:id="@+id/knowledge_new_viewlist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/knowledge_new_viewlist_line" 
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="horizontal"
    android:shrinkColumns="1"
    android:stretchColumns="1" >

    <RelativeLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/electricreport_main_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/electricreport_main_titleText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/electricreport_main_back"
            android:text="@string/electricreport_main"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>

        <ImageButton
            android:id="@+id/electricreport_main_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/le_submit" />

    </RelativeLayout>

    <TableRow
        android:id="@+id/TableRow1"
        android:layout_below="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:text="@string/electricreport_main_name"
            android:textColor="@color/Light_gray"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/electricreport_add_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
             android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:hint="@string/electricreport_main_inputname"
            android:layout_span="3"
            android:background="@color/white"
            android:textSize="17sp" >
        </EditText>
    </TableRow>

<RelativeLayout
    android:id="@+id/TableRow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/TableRow1"

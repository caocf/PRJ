<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setup_boatman_titleR"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/setup_boatman_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/setup_boatman_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/setup_boatman_back"
            android:gravity="fill_vertical"
            android:text="@string/setup_boatman"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/setup_boatman_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/le_submit" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e0ffffff" >

            <com.huzhouport.common.util.MultiListView
                android:id="@+id/setup_boatman_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listline" 
                android:dividerHeight="0dp"
                android:divider="@color/transparent"/>

            <LinearLayout
                android:id="@+id/setup_boatman_addcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <ImageButton
                android:id="@+id/setup_boatman_addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:src="@drawable/imgbt_userselect" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">          
           
  
  
     <!-- 配置DAO组件 -->
	<bean id="userDao" class="com.huzhouport.user.dao.impl.UserDaoImpl">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置业务逻辑组件 -->
 	<bean id="userService" class="com.huzhouport.user.service.impl.UserServiceImpl">
		<!-- 为业务逻辑组件注入DAO组件 -->
		<property name="userDao" ref="userDao"></property>
		<property name="baseDao" ref="baseDao"></property>
	</bean>	


	<!-- 创建userInfoAction实例 -->
	<bean id="UserAction" class="com.huzhouport.user.action.UserAction"
		scope="prototype">
		<property name="userService" ref="userService"></property>
		<property name="baseService" ref="baseService"></property>
	</bean>
	
	<bean name="LoginAction" class="com.huzhouport.user.action.LoginAction">
		<property name="userService" ref="userService"></property>
		<property name="logsaveserver" ref="logsaveserver"></property>
		<property name="roleService" ref="roleService"></property>
	</bean>
	
	
	
	
</beans>

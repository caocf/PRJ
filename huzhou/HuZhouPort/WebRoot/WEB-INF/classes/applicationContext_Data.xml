	<!-- 配置数据源：使用C3P0方式 -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver"></property>
		<property name="jdbcUrl" value="jdbc:mysql://localhost:3306/huzhouport?useunicode=true&amp;characterEncoding=utf8"></property>
		<property name="user" value="root"></property>
		<property name="password" value="111111"></property>
		<property name="initialPoolSize" value="30"></property>
		<property name="maxPoolSize" value="50"></property>
		<property name="minPoolSize" value="20"></property>
		<property name="maxIdleTime" value="20"></property>
		
	</bean>

	<!-- 定义SessionFactory -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"
		abstract="false">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">com.huzhouport.common.util.MySql5Dialect</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<property name="mappingDirectoryLocations">
			<list>
				<!--用户管理hibernate配置包-->
				<value>classpath:com/huzhouport/hibernate/user</value>
				
				<value>classpath:com/huzhouport/hibernate/organization</value>
				
				<value>classpath:com/huzhouport/hibernate/role</value>
			
				<value>classpath:com/huzhouport/hibernate/log</value>
		
				<value>classpath:com/huzhouport/hibernate/schedule</value>
				
				<value>classpath:com/huzhouport/hibernate/leaveandovertime</value>
				
				<value>classpath:com/huzhouport/hibernate/electric</value>
				
				<value>classpath:com/huzhouport/hibernate/knowledge</value>
				<!--违章hibernate配置包-->
				<value>classpath:com/huzhouport/hibernate/illegal</value>
				<!--许可hibernate配置包-->
				<value>classpath:com/huzhouport/hibernate/permit</value>
			
				<value>classpath:com/huzhouport/hibernate/attendace</value>
				
				<value>classpath:com/huzhouport/hibernate/dangerousGoodsPortln
				</value>
				
				<value>classpath:com/huzhouport/hibernate/dangerousGoodsJob</value>
				
				<value>classpath:com/huzhouport/hibernate/patrol</value>
				
				<value>classpath:com/huzhouport/hibernate/cruiselog</value>
				
				<value>classpath:com/huzhouport/hibernate/equipment</value>
				
				<value>classpath:com/huzhouport/hibernate/publicuser</value>

				
				<value>classpath:com/huzhouport/hibernate/wharfwork</value>
				
				<value>classpath:com/huzhouport/hibernate/portNavigation</value>
				
				
				<value>classpath:com/huzhouport/hibernate/electricReport</value>
				
		
				<value>classpath:com/huzhouport/hibernate/pushmsg</value>
				
				 
				<value>classpath:com/huzhouport/hibernate/download</value>
				
				 
				<value>classpath:com/huzhouport/hibernate/portDynmicNews</value>
				<value>classpath:com/huzhouport/hibernate/ais</value>
				<value>classpath:com/huzhouport/hibernate/shipquerylog</value>
				<value>classpath:com/hibernate/meeting</value>
				<value>classpath:com/huzhouport/hibernate/car</value>
			</list>
		</property>
	</bean>

	<!-- 定义hibernateTemplate -->
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	

	
	

	<!-- 配置DAO组件 -->
	<bean id="baseDao" class="com.huzhouport.common.dao.impl.BaseDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate" />

	</bean>


	<!-- 配置业务逻辑组件 -->
	<bean id="baseService" class="com.huzhouport.common.service.impl.BaseServiceImpl">
		<!-- 为业务逻辑组件注入DAO组件 -->
		<property name="baseDao" ref="baseDao"></property>
	</bean>

	<!-- 配置事务管理器 -->
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"></property>
		
	</bean>

	<!-- 使用注解式事务 -->
	<tx:annotation-driven transaction-manager="transactionManager" />
	
	
	<!-- 定时器 -->
    <bean name="contentarbitrateservicejob"  class="org.springframework.scheduling.quartz.JobDetailBean">
	    <property name="jobClass">
	     <value>com.huzhouport.electric.action.QuartzTask</value>
	    </property>
		<property name="jobDataAsMap">
			<map>
				<entry key="timeout"><value>5</value></entry>
		 		<entry key="wharfSelectService" value-ref="wharfSelectService"></entry>  		
			</map>
		</property>
   </bean>
    <bean name="contentarbitrateservicejob2"  class="org.springframework.scheduling.quartz.JobDetailBean">
	    <property name="jobClass">
	     <value>com.huzhouport.electric.action.QuartzTask2</value>
	    </property>
		<property name="jobDataAsMap">
			<map>
				<entry key="timeout"><value>5</value></entry>
		 		<entry key="wharfWorkServer" value-ref="wharfWorkServer"></entry>  		
			</map>
		</property>
   </bean>
 
   <!-- 配置触发器 -->
  <bean id="cronTriggerCA" class="org.springframework.scheduling.quartz.CronTriggerBean">
	<property name="jobDetail">
		<ref bean="contentarbitrateservicejob" />
	</property>
	<!-- 每周周末6点获取一次-->
	<property name="cronExpression">
		<value>0 00 18 ? * SUN</value>
	</property>

</bean>
<bean id="cronTriggerCA2" class="org.springframework.scheduling.quartz.CronTriggerBean">
	<property name="jobDetail">
		<ref bean="contentarbitrateservicejob2" />
	</property>
	<!-- 每个月1日的15分-->
	<property name="cronExpression">
		<value>0 15 00 01 * ?</value>
		</property>

</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		 <!-- 添加触发器 -->
		<property name="triggers">
			<list>
				<ref local="cronTriggerCA" />
				<ref local="cronTriggerCA2" />
			</list>
		</property>
	</bean>
	 <!-- //定时器 -->
</beans>

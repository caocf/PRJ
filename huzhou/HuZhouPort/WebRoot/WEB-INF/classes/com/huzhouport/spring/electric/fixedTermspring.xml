<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
     <!-- 配置DAO组件 -->
	<bean id="fixedTermReportDao" class="com.huzhouport.electric.dao.impl.FixedTermReportDaoImpl">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置业务逻辑组件 -->
 	<bean id="fixedTermReportService" class="com.huzhouport.electric.service.impl.FixedTermReportServiceImpl">
		<!-- 为业务逻辑组件注入DAO组件 -->
		<property name="fixedTermReportDao" ref="fixedTermReportDao"></property>
		<property name="baseDao" ref="baseDao"></property>
	</bean>	


	<!-- 创建userInfoAction实例 -->
	<bean id="FixedTermReportAction" class="com.huzhouport.electric.action.FixedTermReportAction"
		scope="prototype">
		<property name="fixedTermReportService" ref="fixedTermReportService"></property>
		<property name="baseService" ref="baseService"></property>
	</bean>
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
     <!-- 配置DAO组件 -->
	<bean id="industryInfoDao" class="com.huzhouport.portDynmicNews.dao.IndustryInfoDao">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>
	
	<!-- 创建Action实例 -->
	<bean id="industryInfoAction" class="com.huzhouport.portDynmicNews.action.IndustryInfoAction"
		scope="prototype">
		<property name="industryInfoDao" ref="industryInfoDao"></property>
		<property name="pushMsgService" ref="pushMsgService"></property>
	</bean>

</beans>

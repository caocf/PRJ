<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
     <!-- 配置DAO组件 -->
	<bean id="publicUserDao" class="com.huzhouport.publicuser.dao.impl.PublicUserDaoImpl">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置业务逻辑组件 -->
 	<bean id="publicUserService" class="com.huzhouport.publicuser.service.impl.PublicUserServiceImpl">
		<!-- 为业务逻辑组件注入DAO组件 -->
		<property name="publicUserDao" ref="publicUserDao"></property>
		<property name="baseDao" ref="baseDao"></property>
	</bean>


	<!-- 创建userInfoAction实例 -->
	<bean id="publicUserAction" class="com.huzhouport.publicuser.action.PublicUserAction"
		scope="prototype">
		<property name="publicUserService" ref="publicUserService"></property>
		<property name="baseService" ref="baseService"></property>
		<property name="logsaveserver" ref="logsaveserver"></property>
	</bean>

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
     <!-- 配置DAO组件 -->
	<bean id="pushMsgDao" class="com.huzhouport.pushmsg.dao.impl.PushMsgDaoImpl">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置业务逻辑组件 -->
 	<bean id="pushMsgService" class="com.huzhouport.pushmsg.service.impl.PushMsgServiceImpl">
		<!-- 为业务逻辑组件注入DAO组件 -->
		<property name="pushMsgDao" ref="pushMsgDao"></property>
		<property name="baseDao" ref="baseDao"></property>
	</bean>	


	<!-- 创建userInfoAction实例 -->
	<bean id="PushMsgAction" class="com.huzhouport.pushmsg.action.PushMsgAction"
		scope="prototype">
		<property name="pushMsgService" ref="pushMsgService"></property>
		<property name="baseService" ref="baseService"></property>
	</bean>

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="carDao" class="com.huzhouport.car.dao.CarDao">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>	

	<bean id="carService"
		class="com.huzhouport.car.service.CarService">
		<property name="carDao" ref="carDao"></property>
	</bean>
	
	<bean name="carAction" class="com.huzhouport.car.action.CarAction"
		scope="prototype">
		<property name="carService" ref="carService"></property>
		<property name="meetingService" ref="meetingService"></property>
		<property name="pushservice" ref="pushservice"></property>
	</bean>
</beans>

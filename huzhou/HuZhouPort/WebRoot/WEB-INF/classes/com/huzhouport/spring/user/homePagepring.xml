<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">           
  
     <!-- 配置DAO组件 -->
	<bean id="homePageDao" class="com.huzhouport.user.dao.impl.HomePageDaoImpl">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置业务逻辑组件 -->
 	<bean id="homePageService" class="com.huzhouport.user.service.impl.HomePageServiceImpl">
		<!-- 为业务逻辑组件注入DAO组件 -->
		<property name="homePageDao" ref="homePageDao"></property>
	</bean>	


	<!-- 创建userInfoAction实例 -->
	<bean id="HomePageAction" class="com.huzhouport.user.action.HomePageAction"
		scope="prototype">
		<property name="homePageService" ref="homePageService"></property>
	</bean>
</beans>

<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	<!-- 
    每个class对应一个持久化对象
-->
<hibernate-mapping>
	<class name="com.huzhouport.wechat.model.Message" table="mm_Message">
		<id name="MessageID" column="MessageID">
			<generator class="native"></generator>
		</id>
		<property name="userFrom" column="UserFrom"></property>
		<property name="userTo" column="UserTo"></property>
		<property name="messageKind" column="MessageKind"></property>
		<property name="messageContent" column="MessageContent"></property>
		<property name="messageTime" column="MessageTime"></property>
		<property name="readTime" column="ReadTime"></property>
	</class>
</hibernate-mapping>

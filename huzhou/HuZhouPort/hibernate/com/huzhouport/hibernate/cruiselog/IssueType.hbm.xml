<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 
    每个class对应一个持久化对象
-->
<hibernate-mapping>
    <class name="com.huzhouport.cruiselog.model.IssueType" table="cruise_issuetype" >
       <id name="id" column="id" >
            <generator class="increment"></generator>
       </id>
       <property name="name" column="name" ></property>
       <property name="level" column="level" ></property>
       <property name="pid" column="pid" ></property>
       <property name="pname" column="pname" ></property>
       <property name="haschild" column="haschild" ></property>
    </class>
    
</hibernate-mapping>

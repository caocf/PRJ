<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	<!-- 
    每个class对应一个持久化对象
-->
<hibernate-mapping>
	<class name="com.huzhouport.attendace.model.Sign" table="mm_Sign">
		<id name="signID" column="SignID">
			<generator class="native"></generator>
		</id>
		<property name="signTime" column="SignTime"></property>
		<property name="signUser" column="SignUser"></property>
		<property name="signLocation" column="SignLocation"></property>
		<property name="signStatus" column="SignStatus"></property>
	</class>
</hibernate-mapping>

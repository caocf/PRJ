<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- Action必须放在指定的包名空间中 -->
	<package name="sign" extends="cement-interceptor" namespace="/">

		<!-- 查询信息 -->
		<action name="showSignInfo" class="com.huzhouport.attendace.action.SignAction"
			method="showSignInfo">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 增加 -->
		<action name="addSignInfo" class="com.huzhouport.attendace.action.SignAction"
			method="addSignInfo">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 增加 -->
		<action name="addSignInfoBack" class="com.huzhouport.attendace.action.SignAction"
			method="addSignInfoBack">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<action name="showSignInfoById" class="com.huzhouport.attendace.action.SignAction"
			method="showSignInfoById">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- ID -->
		<action name="seeSignInfoID" class="com.huzhouport.attendace.action.SignAction"
			method="seeSignInfoID">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
	</package>

</struts>    

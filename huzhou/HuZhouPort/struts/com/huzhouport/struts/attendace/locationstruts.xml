<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- Action必须放在指定的包名空间中 -->
	<package name="location" extends="cement-interceptor"
		namespace="/">

		<!-- 查询信息 -->
		<action name="showLocationInfo" class="com.huzhouport.attendace.action.LocationAction"
			method="showLocationInfo">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>

		<action name="addLocationInfo" class="com.huzhouport.attendace.action.LocationAction"
			method="addLocationInfo">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
	</package>

</struts>    

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- Action必须放在指定的包名空间中 -->
	<package name="electricReport" extends="cement-interceptor" namespace="/">

		<!-- 查询信息 -->
		<action name="showElectricReportInfo" class="com.huzhouport.electric.action.ElectricReportAction"
			method="showElectricReportInfo">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 查询信息 -->
		<action name="showElectricReportInfoAD" class="com.huzhouport.electric.action.ElectricReportAction"
			method="showElectricReportInfoAD">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 公众查询信息 -->
		<action name="showElectricReportInfoPublic" class="com.huzhouport.electric.action.ElectricReportAction"
			method="showElectricReportInfoPublic">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 增加 -->
		<action name="addElectricReportInfo" class="com.huzhouport.electric.action.ElectricReportAction"
			method="addElectricReportInfo">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 按ID-->
		<action name="showElectricReportID" class="com.huzhouport.electric.action.ElectricReportAction" 
		method="showElectricReportID">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		
		</package>

</struts>    

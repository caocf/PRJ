<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- Action必须放在指定的包名空间中 -->
	<package name="role" extends="cement-interceptor" namespace="/">
		<!-- 显示角色表 -->
		<action name="showRoleList" class="com.huzhouport.role.action.RoleAction"
			method="showRoleList">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 显示权限表 -->
		<action name="showPermissionList" class="com.huzhouport.role.action.RoleAction"
			method="showPermissionList">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 显示权限类型表 -->
		<action name="showPermissionKindList" class="com.huzhouport.role.action.RoleAction"
			method="showPermissionKindList">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		<!-- 按角色ID查找 -->
		<action name="searchRolePermissionByRoleId" class="com.huzhouport.role.action.RoleAction"
			method="searchRolePermissionByRoleId">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
	   <!-- 新增角色-->
		<action name="addRole" class="com.huzhouport.role.action.RoleAction"
			method="addRole">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		  <!-- 删除角色-->
		<action name="deleteRole" class="com.huzhouport.role.action.RoleAction"
			method="deleteRole">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		  <!-- 修改角色-->
		<action name="updateRole" class="com.huzhouport.role.action.RoleAction"
			method="updateRole">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		 <!-- 登陆用户的权限-->
		<action name="GetRoleInforBySession" class="com.huzhouport.role.action.RoleAction"
			method="GetRoleInforBySession">
			<result name="success" type="json" />
			<result name="error">/error.jsp</result>
		</action>
		</package>
</struts>    

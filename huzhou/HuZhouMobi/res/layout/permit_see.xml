<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/permit_see_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:gravity="center"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/permit_see_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/permit_see_back"
            android:gravity="fill_vertical"
            android:textColor="#0067ac"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:shrinkColumns="2"
                android:stretchColumns="2" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/permit_see_object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:gravity="fill_vertical"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/permit_description"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/permit_see_text02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/permit_user"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/permit_see_text03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_vertical"
                        android:text="@string/illegal_time"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/permit_see_text04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/permit_see_tr_supplement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_vertical"
                        android:text="@string/permit_updateList"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/permit_see_text05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:textSize="12sp"
                         />

                    <TextView
                        android:id="@+id/permit_see_text06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp" 
                       />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <Gallery
                        android:id="@+id/permit_see_galleryImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:spacing="2dp" >
                    </Gallery>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <Gallery
                        android:id="@+id/permit_see_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:spacing="2dp" >
                    </Gallery>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="150dp" >

                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/permit_see_map"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_span="4"
                        android:clickable="true" />
                </TableRow>

               
            </TableLayout>

            <RelativeLayout
                android:id="@+id/permit_see_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/permit_see_checkImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp" 
                    android:contentDescription="@string/illegal_check_spinner"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/permit_see_checkImg"
                    android:text="@string/check"
                    android:textColor="@color/Light_gray" />

                <TextView
                    android:id="@+id/permit_see_checkResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/permit_see_checkImg" />

                <TextView
                    android:id="@+id/permit_see_checkcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/permit_see_checkResult"
                    android:layout_toRightOf="@+id/permit_see_checkImg" />

                <TextView
                    android:id="@+id/permit_see_checkInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/permit_see_checkcontent"
                    android:layout_toRightOf="@+id/permit_see_checkImg" />
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/permit_see_updateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/permit_see_bt_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/bt_supplement" 
                        android:contentDescription="@string/illegal_bt_update"
                        android:background="@color/transparent"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
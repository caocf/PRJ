<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/dangerousgoodsportln_approvaltiteltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/dangerousgoodsportln_approvalback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/dangerousgoodsportln_approvaltitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="@string/leaveandovertime_approval"
                android:textColor="#0067ac"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/dangerousgoodsportln_approvaltable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:shrinkColumns="1"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/dangerousgoodsportln_approval_Result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/leaveandovertime_approval_result"
                android:textColor="@color/Light_gray"
                android:textSize="18sp" >
            </TextView>

            <Spinner
                android:id="@+id/dangerousgoodsportln_approval_ResultNeirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/bg_spinner"
                android:layout_marginRight="20dp" />
        </TableRow>
<TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="0.5dp" 
            >

            <TextView
                android:id="@+id/dangerousgoodsportln_approval_Opinion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/leaveandovertime_approval_Opinion"
                android:textColor="@color/Light_gray"
                android:textSize="18sp"
                android:paddingLeft="10dp" >
            </TextView>

            <EditText
                android:id="@+id/dangerousgoodsportln_approval_OpinionNeirong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:textSize="18sp" >
            </EditText>
        </TableRow>
        
    </TableLayout>

    <ImageButton
        android:id="@+id/dangerousgoodsportln_approval_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:src="@drawable/imgbt_submit" />

</LinearLayout>
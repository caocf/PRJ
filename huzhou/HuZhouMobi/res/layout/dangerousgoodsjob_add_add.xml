<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/dangerousgoodsjob_leaveaddtiteltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/dangerousgoodsjob_addback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/dangerousgoodsjob_addtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/dangerousgoodsjob_button1"
                android:textColor="#0067ac"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dangerousgoodsjob_add_addtable"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/dangerousgoodsjob_addtable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
                android:background="@color/grey"
                android:orientation="horizontal"
                android:stretchColumns="1" 
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" 
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_shipName"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"                
                        android:text="@string/dangerousgoodsportln_ShipName"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp"
                        android:paddingLeft="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_shipNameNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:textSize="18sp" 
                        android:layout_span="3" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp" 
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_declareTime"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:text="@string/dangerousgoodsportln_DeclareTime"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" 
                        android:paddingLeft="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_declareTimeNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_span="3" >
                    </TextView>
                </TableRow>
                
                
                  <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" 
                    android:layout_marginBottom="0.5dp">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_StartingPort"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/dangerousgoodsportln_StartingPort"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" 
                        android:paddingLeft="10dp">
                    </TextView>

                    <EditText
                        android:id="@+id/dangerousgoodsjob_add_StartingPortNeirong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:layout_span="3" >
                    </EditText>
                </TableRow>
                
                  <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" 
                     android:layout_marginBottom="0.5dp">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_ArrivalPort"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/dangerousgoodsportln_ArrivalPort"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" 
                        android:paddingLeft="10dp">
                    </TextView>

                    <EditText
                        android:id="@+id/dangerousgoodsjob_add_ArrivalPortNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:layout_span="3" >
                    </EditText>
                </TableRow>
                  <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" 
                     android:layout_marginBottom="0.5dp">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_CargoTypes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/dangerousgoodsportln_CargoTypes"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" 
                        android:paddingLeft="10dp">
                    </TextView>

                    <EditText
                        android:id="@+id/dangerousgoodsjob_add_CargoTypesNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:layout_span="3" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                     >

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_DangerousLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:text="@string/dangerousgoodsportln_DangerousLevel"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp"
                        android:paddingLeft="10dp" >
                    </TextView>

                    <Spinner
                        android:id="@+id/dangerousgoodsjob_add_DangerousLevelNeirong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/bg_spinner" 
                        android:layout_span="3" 
                        />
                </TableRow>

                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" 
                     android:layout_marginBottom="0.5dp">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_wharfName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:text="@string/dangerousgoodsjob_wharfName"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" 
                        android:paddingLeft="10dp">
                    </TextView>

                   <TextView
                        android:id="@+id/dangerousgoodsjob_add_wharfNameNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="18sp" >
                    </TextView>
                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_wharfID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone" >
                    </TextView>
                    
                      <ImageButton
                        android:id="@+id/dangerousgoodsjob_add_wharfNameimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:src="@drawable/userselect" />
                   
                </TableRow>
                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" 
                     android:layout_marginBottom="0.5dp">

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_workTIme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/dangerousgoodsjob_workTIme"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp"
                        android:paddingLeft="10dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_workTImeNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:layout_span="3" >
                    </TextView>
                </TableRow>

              

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:layout_marginBottom="0.5dp"
                    android:paddingTop="10sp" >

                    <TextView
                        android:id="@+id/dangerousgoodsjob_add_Carrying"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/dangerousgoodsportln_Carrying"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" 
                        android:paddingLeft="10dp">
                    </TextView>

                    <EditText
                        android:id="@+id/dangerousgoodsjob_add_CarryingNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="18sp"
                        android:layout_span="3"  >
                    </EditText>
                </TableRow>
            </TableLayout>

            <ImageButton
                android:id="@+id/dangerousgoodsjob_add_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/imgbt_submit" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/dangerousgoodsjob_leaveaddrelat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/dangerousgoodsjob_wharfName_titeltable"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/title_background2"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/dangerousgoodsjob_wharfName_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:contentDescription="@string/back"
                    android:src="@drawable/title_back" />

                <TextView
                    android:id="@+id/dangerousgoodsjob_wharfName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/dangerousgoodsjob_wharfNameselect"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/dangerousgoodsjob_wharfName_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/title_search" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/dangerousgoodsjob_wharfName_titeltable1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/title_background2"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:stretchColumns="1"
            android:visibility="invisible" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <com.huzhouport.common.util.ClearEditText
                    android:id="@+id/dangerousgoodsjob_wharfName_searchtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="5"
                    android:background="@drawable/search_background"
                    android:drawableLeft="@drawable/search_icon"
                    android:drawableRight="@drawable/clear"
                    android:hint="@string/addresslist_search"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/dangerousgoodsjob_wharfName_search1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/addresslist_quxiao" />

                <Button
                    android:id="@+id/dangerousgoodsjob_wharfName_search2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/addresslist_search"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>
        
        <ListView
        android:id="@+id/dangerousgoodsjob_add_viewlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/dangerousgoodsjob_wharfName_titeltable"
        />
        
    </RelativeLayout>
  
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp" 
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        
        <LinearLayout 
          android:orientation="horizontal"  
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
            >


        <TextView
            android:id="@+id/equipment_approvalitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            />
</LinearLayout>
        <TextView
            android:id="@+id/equipment_approvalitem_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#8b8b8b"
            android:textSize="14sp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/equipment_approvalitem_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:visibility="gone" />
        
           <TextView
            android:id="@+id/equipment_approvalitem_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:visibility="gone" /> 
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="right|center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/equipment_approvalitem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:src="@drawable/leave_status1" />
    </LinearLayout>

</LinearLayout>
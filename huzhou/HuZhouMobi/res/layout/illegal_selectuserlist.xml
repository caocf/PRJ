<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/illegalselectuser_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/illegalselectuser_titeltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:focusableInTouchMode="true" >

        <ImageButton
            android:id="@+id/illegalselectuser_new_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/illegalselectuser_new_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/illegalselectuser_new_back"
            android:gravity="center_vertical"
            android:text="@string/addresslist_button"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/illegalselectuser_new_zhuye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/go_home"
            android:src="@drawable/address_zhuye" />
    </RelativeLayout>

    <EditText
        android:id="@+id/illegalselectuser_new_searchtextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/illegalselectuser_titeltable"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/illegalselectuser_new_searchbutton"
        android:background="@drawable/address_select"
        android:hint="@string/search"
        android:inputType="text"
        android:paddingLeft="30dp"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/illegalselectuser_new_searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/illegalselectuser_titeltable"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:contentDescription="@string/search"
        android:src="@drawable/address_serech" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/illegalselectuser_new_searchtextname" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/illegalselectuser_historybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/address_tree"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/illegal_select_history"
                android:textColor="#8b8b8b"
                android:textSize="14sp" />

            <com.huzhouport.leaveandovertime.MultiListView
                android:id="@+id/illegalselectuser_new_historylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/illegalselectuser_historybutton" />

            <Button
                android:id="@+id/illegalselectuser_newbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/illegalselectuser_new_historylist"
                android:background="@drawable/address_tree"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/addresslist_newbutton"
                android:textColor="#8b8b8b"
                android:textSize="14sp" />

            <com.huzhouport.leaveandovertime.MultiListView
                android:id="@+id/illegalselectuser_new_viewlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/illegalselectuser_newbutton" />

            <Button
                android:id="@+id/illegalselectuser_newbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/illegalselectuser_new_viewlist"
                android:background="@drawable/address_tree"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/addresslist_newbutton1"
                android:textColor="#8b8b8b"
                android:textSize="14sp" />

            <com.huzhouport.leaveandovertime.MultiListView
                android:id="@+id/illegalselectuser_new_viewlist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/illegalselectuser_newbutton1" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
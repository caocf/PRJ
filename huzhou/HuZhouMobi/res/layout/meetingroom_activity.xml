<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f9f9f9">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal" 
        android:onClick="onViewClick">
         <ImageButton
            android:id="@+id/setup_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back"
            android:onClick="onViewClick" >
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="新建会议申请"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>       
    </LinearLayout>
    
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#d7d7d7">   
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="会议日期"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <TextView 
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:gravity="center|right"
             android:layout_weight="1"
                android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:hint="请选择会议日期"
            android:textSize="14sp"
            android:onClick="onViewClick"/>     
        
    </LinearLayout>
         <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
       
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        <TextView 
            android:id="@+id/start"
            android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:text="会议开始时间"
        android:onClick="onViewClick"/>
        <ImageView 
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_big"/>
          <TextView 
              android:id="@+id/end"
            android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:text="会议结束时间"
        android:onClick="onViewClick"/>
         </LinearLayout>
         
         <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
           <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" 
        android:layout_marginTop="16dp"/>
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="会议室"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <TextView
            android:id="@+id/meetingroom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center|right"
            android:hint="请选择会议室"
            android:layout_marginRight="16dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_right"
            android:textSize="14sp"
            android:onClick="onViewClick" />           
        
    </LinearLayout>
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
     
      <LinearLayout
          android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" 
        android:onClick="onViewClick"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="点击查看会议室申请记录"
            android:textColor="#0067ac" 
            android:textSize="14sp" />          
        
    </LinearLayout>
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" 
        android:visibility="gone"/>
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" 
        android:focusableInTouchMode="true">
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="会议主题"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:hint="请输入会议主题(必填)"
            android:background="@null"
            android:textSize="14sp"/>     
        
    </LinearLayout>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="联系电话"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:hint="请输入联系电话"
            android:background="@null"
            android:textSize="14sp"/>     
        
    </LinearLayout>
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
     
   
     
     
           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
         <Button
             android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
        android:gravity="center"    
        android:text="提交申请"   
        android:textColor="@color/white" 
        android:includeFontPadding="false"
        android:layout_weight="1"
        android:background="@drawable/btn_bg"
        android:onClick="onViewClick"/>
          </LinearLayout>
    </LinearLayout>
    
</ScrollView>

</LinearLayout>


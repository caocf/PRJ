<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#fff">

    <TableLayout
        android:id="@+id/cruiselog_leaveaddtiteltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/cruiselog_leaveaddback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/list_back" />

            <TextView
                android:id="@+id/cruiselog_leaveaddtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/cruiselog_add_title"
                android:textColor="#0067ac"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <ScrollView
         android:id="@+id/cruiselog_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/cruiselog_leaveaddtiteltable" 
        android:paddingBottom="48dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/cruiselog_addtable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:stretchColumns="1" 
                 android:shrinkColumns="1">

                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" >

                    <TextView
                        android:id="@+id/cruiselog_add_cruiseLogLoaction"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/cruiselog_cruiseLogLoaction"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/cruiselog_add_cruiseLogLoactionNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:maxLength="100">
                    </EditText>
                    
                </TableRow>
                
                
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/cruiselog_add_cruiseLogUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:text="@string/cruiselog_cruiseLogUserName"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/cruiselog_add_cruiseLogUserNameNeirong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/cruiselog_add_cruiseLogUserNameID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/cruiselog_add_cruiseLogUserNameimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:src="@drawable/imgbt_userselect" />
                </TableRow>

               <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" >

                    <TextView
                        android:id="@+id/cruiselog_add_shipName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/cruiselog_shipName"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/cruiselog_add_shipNameNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:maxLength="100">
                    </EditText>
                    
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp" >

                    <TextView
                        android:id="@+id/cruiselog_add_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/cruiselog_startTime"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/cruiselog_add_startTimeNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:background="@color/white"
                        android:textSize="18sp" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/cruiselog_add_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@string/cruiselog_endTime"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/cruiselog_add_endTimeNeirong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:background="@color/white"
                        android:textSize="18sp" >
                    </TextView>
                </TableRow>

            
            </TableLayout>
             <TextView
               android:id="@+id/cruiselog_shijian1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/grey"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/cruiselog_shijian"
                android:textColor="#333"
                android:textSize="14sp"
                android:visibility="gone" >
            </TextView>
         
            
            <com.huzhouport.leaveandovertime.MultiListView
                android:id="@+id/cruiselog_add_illlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
            </com.huzhouport.leaveandovertime.MultiListView>
            <TextView
                        android:id="@+id/cruiselog_add_illlistid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:visibility="gone">
            </TextView>
             <TextView
                        android:id="@+id/cruiselog_add_localistid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textSize="18sp" 
                        android:visibility="gone">
            </TextView>
            

        </LinearLayout>
    </ScrollView>
      <ImageButton
                        android:id="@+id/cruiselog_add_addbig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_above="@+id/cruiselog_bottomtiteltable"
                        android:gravity="center_vertical"
                        android:src="@drawable/addbigxml" />
       <RelativeLayout
        android:id="@+id/cruiselog_bottomtiteltable"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey"
        android:layout_alignParentBottom="true" >
          <TextView android:id="@+id/cruiselog_add_time"
          android:layout_width="120dp"
          android:layout_height="48dp"
          android:textSize="18sp"
          android:gravity="center"
          android:layout_alignParentLeft="true"
         />     
         <LinearLayout android:id="@+id/cruiselog_add_time_ll"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_alignParentLeft="true"
          android:visibility="gone">
          <TextView android:id="@+id/cruiselog_add_time1"
              android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:gravity="center"
              ></TextView>
           <TextView android:id="@+id/cruiselog_add_time2"
               android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:gravity="center"
              ></TextView>
           <TextView android:id="@+id/cruiselog_add_time3"
               android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:gravity="center"
              ></TextView>
      </LinearLayout>
              <ImageButton
                android:id="@+id/cruiselog_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/cruiselog_start"
                 />
                <ImageButton
                android:id="@+id/cruiselog_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/cruiselog_end"
                android:visibility="gone"
                android:layout_toRightOf="@id/cruiselog_add_time"
                />
    </RelativeLayout>
    
        <com.baidu.mapapi.map.MapView
                                android:id="@+id/cruiselog_add_map"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:clickable="true" 
                                android:visibility="gone"
                                />

</RelativeLayout>
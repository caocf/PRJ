<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/address_list_item"
    android:orientation="horizontal" >
   
<TextView
        android:id="@+id/address_departmentitem_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/shape_279"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/address_jiantou"
        android:gravity="center_vertical"  
        android:textSize="18sp" /> 
  <TextView 
      android:id="@+id/address_departmentitem_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:visibility="gone"
      />      

</LinearLayout>

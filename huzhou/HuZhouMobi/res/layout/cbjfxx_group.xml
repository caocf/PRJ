<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cbjfxx_groupyear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="bottom"
            android:text="@string/year"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cbjfxx_groupmouth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="bottom"
            android:textColor="@color/blue"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="bottom"
            android:text="@string/mouth"
            android:textSize="12sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cbjfxx_group_mouth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="@string/bs_cbjfxx_money"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="@string/bs_cbjfxx_money2"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="@string/bs_cbjfxx_owe"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cbjfxx_group_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bs_cbjfxx_money"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cbjfxx_group_money2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bs_cbjfxx_money2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cbjfxx_group_owe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bs_cbjfxx_owe"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/bs_opentext"
            android:src="@drawable/triangle" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/illegal_add_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/illegal_add_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/illegal_add_back"
            android:gravity="fill_vertical"
            android:text="@string/illegal_add"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/illegal_add_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/title_search" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/line_color"
                    android:orientation="horizontal"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/illegal_user1"
                            android:textColor="@color/Light_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/illegal_add_text01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_span="2"
                            android:gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/illegal_user2"
                            android:textColor="@color/Light_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/illegal_add_text02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/illegal_add_adduser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:contentDescription="@string/illegal_hint_addUser"
                            android:src="@drawable/imgbt_userselect" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/illegal_approvaluser"
                            android:textColor="@color/Light_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/illegal_add_text03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/illegal_add_adduser1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:contentDescription="@string/illegal_hint_addUser"
                            android:src="@drawable/imgbt_userselect" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/illegal_object"
                            android:textColor="@color/Light_gray"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/illegal_add_object"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_span="2"
                            android:hint=""
                            android:singleLine="true"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/illegal_add_twoCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#00000000"
                            android:contentDescription="@string/scan_qr_code"
                            android:src="@drawable/two_code"
                            android:visibility="gone" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/illegal_reason"
                            android:textColor="@color/Light_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/illegal_add_text"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_span="2"
                            android:singleLine="true"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/illegal_description"
                            android:textColor="@color/Light_gray"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/illegal_add_description"
                            style="?android:attr/textViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_span="2"
                            android:gravity="top|left"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" >

                        <Gallery
                            android:id="@+id/illegal_add_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_span="3" >
                        </Gallery>
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical" >

                        <ImageButton
                            android:id="@+id/illegal_add_photograph"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/photograph"
                            android:gravity="center"
                            android:src="@drawable/photograph" />

                        <ImageButton
                            android:id="@+id/illegal_add_soundrecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/soundrecord"
                            android:src="@drawable/soundrecord" />

                        <ImageButton
                            android:id="@+id/illegal_add_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/Recoder"
                            android:src="@drawable/camera" />

                        <ImageButton
                            android:id="@+id/illegal_add_file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/schedule_attament"
                            android:src="@drawable/file" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="150dp" >

                        <com.baidu.mapapi.map.MapView
                            android:id="@+id/illegal_add_map"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_span="4"
                            android:clickable="true" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/illegal_add_upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_span="4"
                            android:background="@color/transparent"
                            android:contentDescription="@string/upload"
                            android:gravity="center"
                            android:src="@drawable/imgbt_submit" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/illegal_add_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/alpha_grey"
                android:orientation="vertical"
                android:padding="30dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/illegal_add_bt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt1" />

                <Button
                    android:id="@+id/illegal_add_bt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt2" />

                <Button
                    android:id="@+id/illegal_add_bt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt3" />

                <Button
                    android:id="@+id/illegal_add_bt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt4" />

                <Button
                    android:id="@+id/illegal_add_bt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
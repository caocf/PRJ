<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/permit_update_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:gravity="center"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/permit_update_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/permit_update_back"
            android:gravity="fill_vertical"
            android:text="@string/illegal_bt_update"
            android:textColor="#0067ac"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

          <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="fill_vertical"
                        android:text="@string/permit_update_user"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/permit_update_text01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="fill_vertical"
                        android:text="@string/permit_object"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/permit_update_object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/permit_description"
                        android:textColor="@color/Light_gray"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/permit_update_description"
                        style="?android:attr/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <Gallery
                        android:id="@+id/permit_update_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2" >
                    </Gallery>
                </TableRow>

               
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white" >

                    <ImageButton
                        android:id="@+id/permit_update_photograph"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:contentDescription="@string/photograph"
                        android:gravity="center"
                        android:src="@drawable/photograph" />

                    <ImageButton
                        android:id="@+id/permit_update_soundrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:contentDescription="@string/soundrecord"
                        android:gravity="center"
                        android:src="@drawable/soundrecord" />

                    <ImageButton
                        android:id="@+id/permit_update_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:contentDescription="@string/Recoder"
                        android:gravity="center"
                        android:src="@drawable/camera" />

                    <ImageButton
                        android:id="@+id/permit_update_file"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:contentDescription="@string/schedule_attament"
                        android:gravity="center"
                        android:src="@drawable/file" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <ImageButton
                        android:id="@+id/permit_update_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_span="4"
                        android:background="@color/transparent"
                        android:contentDescription="@string/upload"
                        android:gravity="center"
                        android:src="@drawable/imgbt_submit" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
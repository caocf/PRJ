<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f9f9f9">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu"
        android:orientation="horizontal" 
        android:onClick="onViewClick">
         <ImageButton
            android:id="@+id/setup_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back"
            android:onClick="onViewClick" >
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="新建用车申请"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>       
    </LinearLayout>
    
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#d7d7d7">     
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="用车时间"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <TextView
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center|right"
            android:hint="请选择用车开始时间"
            android:layout_marginRight="16dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_right"
            android:textSize="14sp"
            android:onClick="onViewClick" />           
        
    </LinearLayout>
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />    
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" 
        android:focusableInTouchMode="true">
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="还车时间"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <TextView
            android:id="@+id/endtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center|right"
            android:hint="请选择还车时间"
            android:layout_marginRight="16dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_right"
            android:textSize="14sp"
            android:onClick="onViewClick" />      
        
    </LinearLayout>     
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
     
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" 
        android:layout_marginTop="16dp"/>
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="用车人数"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:hint="请输入用车人数"
            android:inputType="number"
            android:textSize="14sp"
            android:background="@null"/>     
        
    </LinearLayout>
       
         
         <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
         
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="上车地点"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:hint="请输入上车地点"
            android:textSize="14sp"
            android:background="@null"/>     
        
    </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="目的地"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:hint="请输入目的地"
            android:textSize="14sp"
            android:background="@null"/>     
        
    </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="用车理由"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
           android:singleLine="false"
            android:hint="请填写用车理由"
            android:textSize="14sp"
            android:background="@null"/>     
        
    </LinearLayout>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" 
        android:layout_marginTop="16dp"/>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="联系电话"
            android:textColor="#666666" 
            android:textSize="16sp" />
        <EditText 
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:hint="请输入联系电话"
            android:inputType="number"
            android:textSize="14sp"
            android:background="@null"/>     
        
    </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999" />
           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:orientation="horizontal" >
         <Button
             android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
        android:gravity="center"    
        android:text="提交申请"   
        android:textColor="@color/white" 
        android:includeFontPadding="false"
        android:layout_weight="1"
        android:background="@drawable/btn_bg"
        android:onClick="onViewClick"/>
          </LinearLayout>
    </LinearLayout>
    
</ScrollView>

</LinearLayout>


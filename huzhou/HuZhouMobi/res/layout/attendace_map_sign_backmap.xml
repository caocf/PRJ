        android:id="@+id/attendace_main_backlocaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp" /> -->
         <TextView
        android:id="@+id/attendace_main_backlocaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textSize="16sp" />
</TableRow>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageButton
            android:id="@+id/attendace_main_backmap_localtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/imgbt_attenbackcheck"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/attendace_main_backmap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/imgbt_attenback" />
    </TableRow>

    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/attendace_main_backmap"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/attendace_main_backmap_titleText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/attendace_main_backmap"
            android:gravity="center_vertical"
            android:text="@string/attendace_sign_back"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/attendace_main_backmap_bmapview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/tableRow2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/frameLayout1" >
    </com.baidu.mapapi.map.MapView>


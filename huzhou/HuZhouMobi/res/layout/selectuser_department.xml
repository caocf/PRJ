<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/selectuser_department_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:contentDescription="@string/leaveandovertime_userselect"
        android:src="@drawable/checkbox_no" />

    <TextView
        android:id="@+id/selectuser_department_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/selectuser_department_checkbox"
        android:drawableLeft="@drawable/shape_279"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/selectuser_department_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/selectuser_department_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/leaveandovertime_userselect"
        android:gravity="center_vertical"
        android:src="@drawable/address_jiantou" />

</RelativeLayout>
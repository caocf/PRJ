<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp" 
    android:paddingRight="10dp"
    >

        <LinearLayout 
          android:orientation="horizontal"  
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
            >
        <ImageView
            android:id="@+id/wharfwork_item_leftimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wharf_in" 
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/wharfwork_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_weight="4"
            />
           <TextView
            android:id="@+id/wharfwork_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#8b8b8b"
            android:textSize="14sp"
            android:gravity="center_vertical|right"
            android:layout_weight="2"
            />
</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >
        <TextView
            android:id="@+id/wharfwork_item_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#8b8b8b"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_weight="4" />
        

        <TextView
            android:id="@+id/wharfwork_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:visibility="gone"
            />

         
        <TextView
            android:id="@+id/wharfwork_item_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#8b8b8b"
            android:textSize="14sp"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            />
        
        
    </LinearLayout>



</LinearLayout>
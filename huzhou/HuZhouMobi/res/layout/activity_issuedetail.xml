<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

	<!-- 标题栏 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal"
        android:background="@drawable/title_backgrundmenu"
        android:gravity="left|center">
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="0dp"        
        android:background="@drawable/title_back"
        android:onClick="onBack"/>
        <TextView 
            android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题详情"
        android:textColor="#0067ac"
        android:textSize="18sp"
         android:layout_weight="1"/>       
        
        </LinearLayout>
        
    <!-- 内容-->
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f3f3f3"> 
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f2f6f9"
        android:gravity="center"
        android:padding="16dp">
       <TextView 
           android:id="@+id/cruiseuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="巡查人员:"
        android:textColor="#666666"
        android:textSize="12sp"         />         
        <TextView 
           android:id="@+id/cruisetime"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        android:text="巡查时间:"/> 
  </LinearLayout> 
  <TextView 
       android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="类型 "
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/issuetype"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="14sp" 
        android:gravity="left"
        android:text="选择问题类型"
        android:layout_marginRight="16dp"/> 
  </LinearLayout> 
  <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"/>
  <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#d7d7d7"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="左/右岸"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        
       <TextView 
           android:id="@+id/lr"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="14sp" 
        android:gravity="left"
        android:text="左岸"
        android:layout_marginRight="16dp"/>
  </LinearLayout> 
    <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
           
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="航道"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/channel"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="14sp" 
        android:gravity="left"
        android:text="航道"
        android:layout_marginRight="16dp"/>
  </LinearLayout>
  <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"/>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="K桩号"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
        <TextView 
           android:id="@+id/kz"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="14sp" 
        android:gravity="left"
        android:text="KZ308"
        android:layout_marginRight="16dp"/>
       
  </LinearLayout>
  <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"/>
   <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#d7d7d7"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="left|center"
        android:focusable="true">
       <TextView 
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="情况描述"
        android:textColor="#666666"
        android:textSize="16sp"         
        android:layout_marginLeft="16dp"/>         
       <TextView 
           android:id="@+id/mark"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="16dp"
        android:textColor="#333333"
        android:textSize="14sp" 
        android:gravity="left"
        android:text="情况"
        android:layout_marginRight="16dp"/>       
  </LinearLayout>
   
  <TextView 
      android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"/>
  
  <net.hxkg.channel.EvidenceGridView
      android:id="@+id/evidence"
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:numColumns="4">
  </net.hxkg.channel.EvidenceGridView>
  
  <LinearLayout
      android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:visibility="gone">
  <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1" 
            android:layout_gravity="center"
            android:text="编辑"
            android:padding="16dp"
            android:background="@drawable/btn_bg"
            android:textColor="#ffffff"
            android:onClick="onEdit"/>
   <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1" 
            android:layout_gravity="center"
            android:text="删除"
            android:padding="16dp"
            android:background="@drawable/shape_red"
            android:textColor="#ffffff"
            android:onClick="onDelete"/>
        </LinearLayout>  
 </LinearLayout> 
  </ScrollView>
</LinearLayout>
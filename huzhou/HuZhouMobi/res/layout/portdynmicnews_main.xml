<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/portdynmicnews_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/portdynmicnews_main_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:src="@drawable/title_back" 
            android:contentDescription="@string/image_default_describe"/>

        <TextView
            android:id="@+id/portdynmicnews_main_titleText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/portdynmicnews_main_back"
            android:gravity="left|center_vertical"
            android:text="@string/portdynmicnews_main"
            android:textColor="#0067ac"
            android:textSize="18sp" >
        </TextView>
        
       <ImageButton
                android:id="@+id/readall"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/readall"
                android:visibility="gone"
                android:contentDescription="@string/image_default_describe" />
    </RelativeLayout>

    <ListView
        android:id="@+id/portdynmicnews_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portdynmicnews_frameLayout"
        android:listSelector="@color/transparent" >
    </ListView> 
    

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:stretchColumns="1"
        android:shrinkColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/title_backgrundmenu" >

            <ImageButton
                android:id="@+id/illegal_see_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/illegal_see_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:textColor="#0067ac"
                android:textSize="18sp" 
                android:singleLine="true"
                android:ellipsize="end"  
               />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:id="@+id/illegal_see_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:shrinkColumns="2"
                android:stretchColumns="2" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/illegal_see_object"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_span="3"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:lines="2"
                        android:ellipsize="end"  
                     />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/illegal_reason"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_text01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:text="@string/illegal_description"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_text02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:text="@string/illegal_user"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_text03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />
                </TableRow>
                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:text="@string/illegal_approvaluser"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_approval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:text="@string/illegal_time"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_text04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_span="2"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/illegal_see_supplement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:text="@string/illegal_updateList"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_text05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/illegal_see_text06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_vertical"
                        android:textColor="@color/Light_gray"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <Gallery
                        android:id="@+id/illegal_see_galleryImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:spacing="2dp" >
                    </Gallery>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <Gallery
                        android:id="@+id/illegal_see_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:spacing="2dp" >
                    </Gallery>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="150dp" >

                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/illegal_see_map"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_span="3"
                        android:clickable="true" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:id="@+id/illegal_see_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/illegal_see_checkImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp" 
                    android:contentDescription="@string/illegal_check_spinner"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/illegal_see_checkImg"
                    android:text="@string/check"
                    android:textColor="@color/Light_gray" />

                <TextView
                    android:id="@+id/illegal_see_checkResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/illegal_see_checkImg" />

                <TextView
                    android:id="@+id/illegal_see_checkcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/illegal_see_checkResult"
                    android:layout_toRightOf="@+id/illegal_see_checkImg" />

                <TextView
                    android:id="@+id/illegal_see_checkInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/illegal_see_checkcontent"
                    android:layout_toRightOf="@+id/illegal_see_checkImg" />
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/illegal_see_updateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/illegal_see_bt_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/bt_supplement" 
                        android:contentDescription="@string/illegal_bt_update"
                        android:background="@color/transparent"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
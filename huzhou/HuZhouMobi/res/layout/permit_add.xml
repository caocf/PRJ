<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_backgrundmenu" >

        <ImageButton
            android:id="@+id/permit_add_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:src="@drawable/title_back" />

        <TextView
            android:id="@+id/permit_add_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/permit_add_back"
            android:gravity="fill_vertical"
            android:text="@string/permit_add"
            android:textColor="#0067ac"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/permit_add_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/title_search" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey"
                    android:orientation="horizontal"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:id="@+id/permit_add_text00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/permit_user"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/permit_add_text01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:textSize="18sp" />
                    </TableRow>

                       <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/permit_object"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/permit_add_object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:drawableRight="@drawable/leave_imgright"
                            android:textSize="18sp"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_gravity="center_vertical"
                            android:text="@string/permit_description"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/permit_add_description"
                            style="?android:attr/textViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="top|left"
                            android:maxLength="300"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" >

                        <Gallery
                            android:id="@+id/permit_add_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_span="3" >
                        </Gallery>
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical" >

                        <ImageButton
                            android:id="@+id/permit_add_photograph"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/photograph"
                            android:gravity="center"
                            android:src="@drawable/photograph" />

                        <ImageButton
                            android:id="@+id/permit_add_soundrecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/soundrecord"
                            android:src="@drawable/soundrecord" />

                        <ImageButton
                            android:id="@+id/permit_add_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:contentDescription="@string/Recoder"
                            android:src="@drawable/camera" />

                        <ImageButton
                            android:id="@+id/permit_add_file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:contentDescription="@string/schedule_attament"
                            android:src="@drawable/file_normal" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="150dp" >

                        <com.baidu.mapapi.map.MapView
                            android:id="@+id/permit_add_map"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_span="4"
                            android:clickable="true" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/permit_add_upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_span="4"
                            android:background="@color/transparent"
                            android:contentDescription="@string/upload"
                            android:gravity="center"
                            android:src="@drawable/imgbt_submit" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/permit_add_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/alpha_grey"
                android:orientation="vertical"
                android:padding="30dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/permit_add_bt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt1" />

                <Button
                    android:id="@+id/permit_add_bt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt2" />

                <Button
                    android:id="@+id/permit_add_bt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt3" />

                <Button
                    android:id="@+id/permit_add_bt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/illegal_bt4" />

                <Button
                    android:id="@+id/permit_add_bt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
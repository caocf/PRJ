<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="net.ghpublic.modol.NewsEN" table="news_base" schema="zjport">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text"  not-null="true"/>
        </property>
        <property name="updatetime">
            <column name="updatetime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="filedir">
            <column name="filedir" sql-type="varchar(255)" not-null="false"/>
        </property>
        <property name="imdir">
            <column name="imdir" sql-type="varchar(255)" not-null="false"/>
        </property>
        <set name="comments" lazy="false">
            <key column="newsid"></key>
            <one-to-many class="net.ghpublic.modol.NewsCommentEN" />
        </set>
        <many-to-one name="region"  class="net.ghpublic.modol.CommonRegionEN" lazy="false" insert="true" update="true">
            <column name="region"/>
        </many-to-one>
        <many-to-one name="newstype" lazy="false" class="net.ghpublic.modol.NewsTypeEN" insert="true" update="true">
            <column name="newstype"/>
        </many-to-one>
    </class>
</hibernate-mapping>